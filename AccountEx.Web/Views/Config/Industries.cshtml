@using AccountEx.Common
@{
    ViewBag.Title = "Industries";   
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Industries</h1>
}


<!-- END PAGE HEADER-->
<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Industries
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Industries.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Industry Name</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="Name" placeholder="Industry Name" data-required="required" data-validate="true" data-message="Industry Name is required" >
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary" onclick="Industries.Save()">Save</button>
                            <button type="button" class="btn btn-primary hide" onclick="Industries.SaveClose()">Save & Close</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="Industries.Add()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue" onclick="Industries.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="Industries.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th style="width: 8px;" class="no-sort">
                                <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                            </th>
                            <th>Industry</th>

                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>




@section FooterScript
{
    <script src="~/Content/AppJS/Config/Industries.js"></script>
    
    <script>
        jQuery(document).ready(function () {
            Industries.init();
        });
    </script>
}
