@using AccountEx.Common
@{
    ViewBag.Title = "Shipeer";   
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Shipeers</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Shipeers
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Products.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control " id="Name" data-required="required" data-message="Account Name is required" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Contact Number</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control " id="ContactNumber" placeholder="Contact Number" data-validate="true" data-message="Contact Number is required" >
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Email</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Email" placeholder="Email" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">City</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="City" placeholder="City" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Address</label>
                            <div class="col-md-6">
                                <textarea class="form-control" id="Address" placeholder="Address" data-plus-as-tab="false"></textarea>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="form-actions">
                    <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                    <div class="col-md-8">
                        <button type="button" class="btn btn-primary" onclick="Shipeers.Save()">Save</button>
                        <button id="btnCancel" type="button" class="btn btn-default" onclick="Shipeers.ListView()">Cancel</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>


<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue" onclick="Shipeers.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="Shipeers.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>

                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>

            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Shipeer</th>
                            <th>Contact Number</th>
                            <th>Email</th>
                            <th>City</th>
                           
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Config/Shipeers.js"></script>


    <script>
        jQuery(document).ready(function () {
            Shipeers.init();
        });
    </script>
}
