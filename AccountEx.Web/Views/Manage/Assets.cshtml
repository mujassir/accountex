@using AccountEx.Common;
@using AccountEx.BussinessLogic;
@using AccountEx.CodeFirst.Models;
@{
    ViewBag.Title = "Assets";
}
@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Assets </h1>
}

<!-- END PAGE HEADER-->
@if (SettingManager.AssetHeadId == 0)
{
    @Html.Partial("_HeadAccountMissing")
}
<div class="row" id="form-info">
    <input type="text" id="AccountDetailFormId" class="hide" value="@((int)AccountDetailFormType.Assets)" />
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Detail
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Assets.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list
                    </a>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="TempCode" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                @Html.Partial("_ParentAccount", new ViewDataDictionary { { "HeadId", SettingManager.AssetHeadId }, { "Labelcolspan", 4 }, { "Divcolspan", 6 } })
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Account Code</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Code" data-required="required" data-message="Account Code is required" data-plus-as-tab="false" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Title</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Name" data-required="required" data-message="Title is required" />
                                    </div>

                                </div>

                                <div class="form-group">
                                    <label class="col-md-4 control-label">Value</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Value" placeholder="Value" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label" for="prefix">Purchase Date</label>
                                    <div class="col-md-5">
                                        <div class="input-group input-medium">
                                            <input type="text" class="form-control date-picker" id="PurchaseDate" placeholder="Purchase Date" data-clear-type="date" data-validate="true"  data-hide-dropdown="true">
                                            <span class="input-group-btn date-icon">
                                                <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                            </span>
                                        </div>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Asset Type</label>
                                    <div class="col-md-6">
                                        <select id="AssetType" class='form-control select2' placeholder="Select Type">
                                            <option></option>
                                            @foreach (var item in (List<AssetType>)ViewBag.AssetTypes)
                                            {

                                                <option value="@item.Name">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Location</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Location" placeholder="Location" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Registration Name</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="RegistrationName" placeholder="Registration Name" />
                                    </div>

                                </div>
                                <div class="form-group">
                                    <label class="col-md-4 control-label">Registration No</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="RegistrationNo" placeholder="Registration No" />
                                    </div>
                                </div>
                                <div class="form-group vehicle">
                                    <label class="col-md-4 control-label">Brand</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Brand" placeholder="Brand" />
                                    </div>

                                </div>
                                <div class="form-group vehicle">
                                    <label class="col-md-4 control-label">Colour</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Color" placeholder="Colour" />
                                    </div>

                                </div>
                                <div class="form-group vehicle">
                                    <label class="col-md-4 control-label">Model</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Model" placeholder="Model" />
                                    </div>

                                </div>
                                <div class="form-group vehicle">
                                    <label class="col-md-4 control-label">Engine No</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="EngineNo" placeholder="Engine No" />
                                    </div>

                                </div>
                                <div class="form-group vehicle">
                                    <label class="col-md-4 control-label">Chassis No</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="ChassisNo" placeholder="Chassis No" />
                                    </div>

                                </div>
                                <div class="form-group land hide">
                                    <label class="col-md-4 control-label">Location</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="Location" placeholder="Location" />
                                    </div>


                                </div>
                                <div class="form-group land hide">
                                    <label class="col-md-4 control-label">Area</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control" id="Area" placeholder="Area" />
                                    </div>


                                </div>
                                <div class="form-group land hide">
                                    <label class="col-md-4 control-label">Khasra No</label>
                                    <div class="col-md-6">
                                        <input type="text" class="form-control " id="KhasraNo" placeholder="Khasra No" />
                                    </div>


                                </div>

                            </div>
                            <div class="col-md-6">
                                <label class="col-md-2 control-label">Description</label>
                                <div class="col-md-9">
                                    <textarea id="AssetDetail" class="form-control" rows="6"></textarea>
                                </div>
                            </div>
                        </div>
                        @*  <div class="form-group">
                                <label class="col-md-2 control-label">Others</label>
                                <div class="col-md-8">
                                    <textarea id="Others" class="form-control"></textarea>
                                </div>
                            </div>*@
                    </div>
                    @if (SiteContext.Current.RoleAccess.CanCreate)
                    {
                        <div class="form-actions">
                            <label class="col-md-2 control-label">&nbsp;</label>

                            <div class="col-md-8">
                                <button type="button" class="btn btn-primary" onclick="Assets.Save()">Save</button>
                                <button id="btnCancel" type="button" class="btn btn-default" onclick="Assets.ListView()">Cancel</button>
                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row " id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue hide" onclick="Assets.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="Assets.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Title</th>
                            <th>Asset Type</th>
                            <th>Value </th>
                            <th>Location </th>
                            <th>Registration Name</th>
                            <th>Registration No</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="8">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>



@section FooterScript
{
    <script src="~/Content/AppJS/Manage/Assets.js"></script>
    <script>
        jQuery(document).ready(function () {
            Assets.init();
        });
    </script>
}
