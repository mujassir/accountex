@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Branches</h1>
}

<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            @*            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Detail
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Categories.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
            </div>*@
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Branches
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Branch</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="Name" placeholder=" Branch" data-required="required" data-validate="true" data-message="Branch Name is required" >
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix" id="lblCity">City</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control" id="City" placeholder="City" data-required="required" data-validate="true" data-message="City is required">
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Email</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="Email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix" id="lblPostal">Postal Code</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control" id="PostalCode" placeholder="Postal Code" data-required="false" data-validate="true" data-message="Postal Code is required">
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Address</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control " id="Address" placeholder="Address">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix"></label>
                            <div class="col-md-2">
                                <input type="checkbox" class="form-control" id="IsHeadOffice" />
                                <label class="control-label">Is Head Office?</label>
                            </div>
                        </div>

                        <!-- uploader-->

                        @*<div class="form-group">
                            <label class="col-md-2 control-label" for="prefix"></label>
                            <div class="col-md-4">
                                <div class="col-md-11">
                                    <div class="form-group">
                                         <input id="BranchPic" accept="image/x-png, image/gif, image/jpeg" type="file" name="...">
                                        <input type="text" id="FileUrl" class="hide" />
                                    </div>
                                </div>
                            </div>
                        </div>*@

                    </div>

                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary green" onclick="VehicleBranches.Save()" data-plus-as-tab="false">Save</button>
                            <button type="button" class="btn btn-primary hide green" onclick="VehicleBranches.SaveClose()" data-plus-as-tab="false">Save & Close</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="VehicleBranches.CustomClear()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Branches Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn green" onclick="VehicleBranches.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn green hide" onclick="VehicleBranches.Save()" data-plus-as-tab="false"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Branch</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>PostalCode</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


@section FooterScript
{
    <script src="~/Content/AppJS/Manage/VehicleBranches.js"></script>

    <script>
        jQuery(document).ready(function () {
            VehicleBranches.init();
        });
    </script>
}
