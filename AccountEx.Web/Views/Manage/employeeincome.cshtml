@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Salary</h1>
}
<div class="row hidden-print hide" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa"></i>Manage Salary Setup
                </div>
                <div class="actions">
                    <a href="javascript:;" onclick="EmployeeIncomeConfig.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <div id="mainform" class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                   @* <input type="text" id="CreatedDate" class="hide ac-date" data-clear-type="date" />
                    <input type="text" id="IsDeleted" class="hide" />
                    <input type="text" id="PreVoucherNumber" class="hide" />*@
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-2 ">
                                <input id="Name" type="text" class="form-control" data-required="required" data-message="Name is required" data-include-in-item="true" data-db-column="Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">From Month</label>
                            <div class="col-md-2 ">
                                <select id="FromMonth" class="form-control select" data-clear="false">
                                    <option value="1">January</option>
                                    <option value="2">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option>
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option>
                                    <option value="12">December</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">From Year</label>
                            <div class="col-md-2 ">
                                  <select id="FromYear" class="form-control select" data-clear="false">
                                    <option value="2015">2015</option>
                                    <option value="2016">2016</option>
                                    <option value="2017">2017</option>
                                </select>
                            </div>
                             <label class="col-md-2 control-label" for="prefix">To Date</label>
                               <div class="col-md-1">
                                <input id="ToDate" type="text" class="form-control ac-date"  Disabled="disabled" data-include-in-item="true" data-db-column="ToDate" >
                            </div>
                             <input id="FromDate" type="text" class="form-control hide"  Disabled="disabled" data-include-in-item="true" data-db-column="FromDate">
                        </div>

                         <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Leave Bank Start</label>
                            <div class="col-md-2 ">
                                <select id="SelectedLeaveMonth" class="form-control select" data-clear="false">
                                    <option value="0">January</option>
                                    <option value="1">February</option>
                                    <option value="3">March</option>
                                    <option value="4">April</option> 
                                    <option value="5">May</option>
                                    <option value="6">June</option>
                                    <option value="7">July</option>
                                    <option value="8">August</option>
                                    <option value="9">September</option>
                                    <option value="10">October</option>
                                    <option value="11">November</option> 
                                    <option value="12">December</option>
                                </select>
                            </div>
                            <input id="LeaveMonthStart" type="text" class="form-control hide"  Disabled="disabled" data-include-in-item="true" data-db-column="LeaveMonthStart" >

                            <label class="col-md-2 control-label" for="prefix">Leave Bank End</label>
                            <div class="col-md-1">
                                <input id="LeaveBankEnd" type="text" class="form-control ac-date"  Disabled="disabled" data-include-in-item="true" data-db-column="LeaveBankEnd" >
                            </div>
                        </div>
                        <div class="form-group" data-save="false">
                            <table id="item-container" class="table table-bordered table-striped ">
                                <thead>
                                    <tr>
                                        <th style="width: 7%;">Code</th>
                                        <th style="width: 15%;">Name</th>
                                        <th>Department</th>
                                        <th>Designation</th>
                                        <th>Basic Salary</th>
                                        <th>House</th>
                                        <th>Conveyance</th>
                                        <th>Medical</th>
                                        <th>Gross Salary</th>
                                        <th>PF</th>
                                        <th>EOBI</th>
                                        <th>SST</th>
                                        <th>OT Rate</th>
                                        <th>Annual</th>
                                        <th>Casual</th>
                                        <th>Sick</th>
                                        <th>Working day</th>
                                    </tr>
                                </thead>
                                <tbody data-plus-as-tab="false">
                                </tbody>
                                @*  </tfoot>*@
                            </table>
                            @*</div>*@
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="btn-set pull-right">
                            <button type="button" class="btn btn-primary green" onclick="EmployeeIncomeConfig.Save()">
                                <i class="fa fa-check"></i>
                                Save</button>
                            @*     <button id="btndelete" type="button" class="btn red" onclick="EmployeeIncomeConfig.Delete()">
                                <i class="fa fa-trash-o"></i>
                                Delete</button>
                            <button id="btnprint" type="button" class="btn yellow" onclick="EmployeeIncomeConfig.Print()">
                                <i class="fa fa-print"></i>

                                Print</button>*@
                            <button type="button" class="btn blue" onclick="EmployeeIncomeConfig.CustomClear()">
                                <i class="fa  fa-times-circle"></i>
                                Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
                <div class="actions">
                    <button type="button" class="btn blue" onclick="EmployeeIncomeConfig.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button type="button" class="btn blue hide" onclick="EmployeeIncomeConfig.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>From Date</th>
                            <th>To Date</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div id="jsondata" class="hide">
    <p id="data">@ViewBag.FormSetting</p>
</div>

<script type="text/template" id="template-item">
      <tr>
        <td> 
           {{AccountCode}}
            <input type='text' class='AccountId hide' id='AccountId' data-db-column="Id" >
            <input type="text" class="Code form-control typeahead input-small  hide" disabled="disabled" readonly="readonly" value="" autocomplete="off" data-db-column="AccountCode">
        </td>
        <td>
    {{Name}}
    
        </td>
         <td>
            <select class="DepartmentId form-control select2" data-db-column="DepartmentId" data-db-type="int">
                @* <option></option>*@
                @foreach (var item in (List<IdName>)ViewBag.Department)
                {
                    <option data-custom="@item.Id" value="@item.Id">@(item.Name)</option>
                }
            </select>
         </td>
         <td>
            <select class="DesignationId form-control select2" data-db-column="DesignationId" data-db-type="int">
              @*   <option></option>*@
                @foreach (var item in (List<IdName>)ViewBag.Designation)
                {
                    <option data-custom="@item.Id" value="@item.Id">@(item.Name)</option>
                }
            </select>
       </td>
       <td>
            <input type="text" class="BasicSalary form-control input-small" data-db-column="BasicSalary" data-db-type="float">
      </td>
        <td>
            <input type="text" class="HouseAllowance form-control input-small" data-db-column="HouseAllowance" data-db-type="float">
        </td>
        <td>
            <input type="text" class="ConveyanceAllowance form-control input-small" data-db-column="ConveyanceAllowance" data-db-type="float">
        </td>
        <td>
            <input type="text" class="MedicalAllowance form-control input-small" data-db-column="MedicalAllowance" data-db-type="float">
        </td>
        <td>
            <input type="text" class="GrossSalary form-control input-small" disabled="disabled" readonly="readonly" data-db-column="GrossSalary" data-db-type="float">
        </td>
        <td>
            <input type="text" class="ProvidentFund form-control input-small" data-db-column="ProvidentFund" data-db-type="float">
        </td>
        <td>
            <input type="text" class="EOBI form-control input-small" data-db-column="EOBI" data-db-type="float">
        </td>
        <td>
            <input type="text" class="SST form-control input-small" data-db-column="SST" data-db-type="float">
         </td>
        <td>
            <input type="text" class="OverTimeRate form-control input-small" data-db-column="OverTimeRate" data-db-type="float">
         </td>
        <td>
            <input type="text" class="AnnualLeaves form-control input-small" data-db-column="AnnualLeaves" data-db-type="int"></td>
        <td>
            <input type="text" class="CasualLeaves form-control input-small" data-db-column="CasualLeaves" data-db-type="int"></td>
        <td>
            <input type="text" class="SickLeaves form-control input-small" data-db-column="SickLeaves" data-db-type="int"></td>
        <td>
            <input type="text" class="WorkingDays form-control input-small" data-db-column="WorkingDays" data-db-type="int"></td>
    </tr>
</script>

<style>
    #item-container {
    }

    table#item-container tr td {
        padding: 2px 6px;
    }

        table#item-container tr td input[type='text'] {
            padding: 0;
            margin: 0;
            border-width: 0;
            height: 20px;
            background-color: transparent;
            width: 100%;
        }

        table#item-container tr td input[type='text'] {
            width: 100% !important;
        }
</style>
@section FooterScript
{
    <script src="~/Content/AppJS/Manage/EmployeeIncomeConfig.js"></script>
    @*<link href="~/Content/print.css" rel="stylesheet" />*@
    <script>
        jQuery(document).ready(function () {
            EmployeeIncomeConfig.init();
        });
    </script>
}