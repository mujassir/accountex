@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Supplier Currencies</h1>
}

<div class="row hidden-print" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Rate
                </div>
            </div>
            <div class="portlet-body form">
                <div id="mainform" class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" value="0" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Supplier</label>
                            <div class="col-md-6">
                                <select id="AccountId" class="form-control select2" data-required="required" data-message="Supplier is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Suppliers)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Currency</label>
                            <div class="col-md-6">
                                <select id="CurrencyId" class="form-control select2" data-required="required" data-message="Currency is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Currencies)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                        </div>


                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary green" onclick="SupplierCurrencies.Save()" data-plus-as-tab="false">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="SupplierCurrencies.CustomClear()">Cancel</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Currencies Rate Listing
                </div>
            </div>
            <div class="form-horizontal" data-save='save' id="Job-Filters">
                <div class="col-md-12 col-sm-12">
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-edit"></i>Filter
                            </div>
                            <div class="actions hide">
                                <a id="actionBackList" href="javascript:;" class="btn blue ">
                                    <i class="fa fa-angle-left"></i>&nbsp;Back to list
                                </a>
                            </div>
                        </div>

                        <div class="form-body" data-querystring="true">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">

                                        <label class="col-md-1 control-label" for="prefix">Supplier</label>
                                        <div class="col-md-5">
                                            <select id="FilterSupplier" class="form-control Filterselect2">
                                                <option></option>
                                                @foreach (var p in (List<IdName>)ViewBag.Suppliers)
                                                {
                                                    <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                                }
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <button id="btnSearch" type="button" class="btn btn-primary btnSearch" onclick="SupplierCurrencies.Filter()"><i class="fa fa-filter"></i>&nbsp;Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover" id="mainTable">
                        <thead>
                            <tr>
                                <th>Supplier</th>
                                <th>Currency</th>
                                <th style="width: 75px;" class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="6" class="center">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>

    </div>

    @section FooterScript
{
        <script src="~/Content/AppJS/Manage/SupplierCurrencies.js"></script>
        <script>
            jQuery(document).ready(function () {
                SupplierCurrencies.init();
            });
        </script>
    }
