@using AccountEx.Common
@{
    ViewBag.Title = "Supplier Products";   
}

@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Supplier Products</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Supplier Products
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="SupplierProducts.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Suppliers</label>
                            <div class="col-md-3">
                                <select id="SupplierId" class="form-control select2" data-required="required" data-message="Supplier is required.">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Suppliers)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Generic/Salt</label>
                            <div class="col-md-3">
                                <select id="GenericId" class="form-control select2" data-required="required" data-message="Generic is required.">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Generics)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
    
                            <label class="col-md-2 control-label" for="prefix">Brand/Company</label>
                            <div class="col-md-3">
                                <select id="BrandId" class="form-control select2" data-required="required" data-message="Brand is required.">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Manufacturers)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <br />
                        <label class="col-md-1 control-label" for="prefix"></label>
                        <div class="form-group" data-save="false">
                            <div class="col-md-4">
                                <table id="product-container" class="table table-bordered scrollable12"  style="height: 100px;">
                                    <thead>
                                        <tr>
                                            <th style="width: 8px;" class="no-sort">
                                                <input type="checkbox" class="group-checkable" id="checkAll" />
                                            </th>
                                            <th>Products</th>
                                        </tr>
                                    </thead>
                                    <tbody data-plus-as-tab="false">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary" onclick="SupplierProducts.Save()">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="SupplierProducts.CustomClear()">Cancel</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Supplier Products Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue" onclick="SupplierProducts.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="SupplierProducts.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>

                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>

            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Supplier Name</th>
                            <th>Product Name</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="11">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Manage/SupplierProducts.js"></script>
    <script>
        jQuery(document).ready(function () {
            SupplierProducts.init();
        });
    </script>
}
