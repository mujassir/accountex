@using AccountEx.Common
@using AccountEx.BussinessLogic;
@{
    ViewBag.Title = "Product Versions";   
}
@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Product Versions</h1>
}

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Product Versions
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Employees.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Version</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control " id="Version" placeholder="Product Version" data-required="required" data-validate="true" data-message="Version is required"  data-plus-as-tab="false">
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Date</label>
                            <div class="col-md-2">
                                <input id="Date" type="text" class="form-control date-picker input-small" data-clear-type='date' data-validate="true" data-required="required" data-message="Date is required" data-hide-dropdown="true">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Description</label>
                            <div class="col-md-8">
                                <input class="form-control" type="text" name="text" id="Description" />
                            </div>
                        </div>

                        <div class="portlet">
                            <div class="portlet-title">
                                <div class="caption">
                                    Updates
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <textarea class="ckeditor form-control" id="ChangeSet" rows="6"></textarea>
                            </div>
                        </div>

                    </div>
                    @if (SiteContext.Current.RoleAccess.CanCreate)
                    {
                        <div class="form-actions">
                            <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                            <div class="col-md-8">
                                <button type="button" class="btn btn-primary" onclick="ProductVersions.Save()">Save</button>
                                <button id="btnCancel" type="button" class="btn btn-default" onclick="ProductVersions.CustomClear()">Cancel</button>
                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>


<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Product Version Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue " onclick="ProductVersions.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="ProductVersions.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th style="width: 8px;" class="no-sort">
                                <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                            </th>
                            <th>Version</th>
                            <th>Description</th>
                            <th>Updates</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="11">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>



@section FooterScript
{
    <script src="~/Content/AppJS/Manage/ProductVersions.js"></script>
    <script>
        jQuery(document).ready(function () {
            ProductVersions.init();
        });
    </script>
}
