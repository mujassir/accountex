@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Vehicles</h1>
}

<div class="row hidden-print" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Vehicles
                </div>
            </div>
            <div class="portlet-body form">
                <div id="mainform" class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" value="0" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Chassis No</label>
                            <div class="col-md-2">
                                <input id="ChassisNo" type="text" class="form-control" data-required="required" data-message="Chassis No is required">
                            </div>
                            <div class="col-md-1">
                                <select id="Type" class="form-control select2">
                                    <option value="@((byte)VehicleType.New)">New</option>
                                    <option value="@((byte)VehicleType.TradIn)">Traded</option>
                                    <option value="@((byte)VehicleType.LocalPurchase)">LP</option>

                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Model</label>
                            <div class="col-md-3">
                                <select id="ModelId" class="form-control select2" data-required="required" data-message="Model is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Model)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Vendor</label>
                            <div class="col-md-3">
                                <select class="form-control select2 suppliers" id="VendorId" placeholder="Select Vendor" data-required="false" data-message="Vendor is required">
                                    <option></option>
                                </select>
                            </div>

                            <label class="col-md-2 control-label" for="prefix">Date</label>
                            <div class="col-md-3">

                                <input id="PurchaseDate" type="text" class="form-control date-picker">
                            </div>

                        </div>
                        <div class="form-group forex-container hide">
                            <label class="col-md-2 control-label" for="prefix">Currency</label>
                            <div class="col-md-3">

                                <select id="CurrencyId" class="form-control select2" data-required="false" data-message="Currency is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Currencies)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Forex Price</label>
                            <div class="col-md-1">

                                <input id="ForexPrice" type="text" class="form-control num3" data-required="false">
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Exchange Rate</label>
                            <div class="col-md-1">

                                <input id="ExcRate" type="text" class="form-control num3" data-required="false" />
                            </div>
                        </div>

                        <div class="form-group">


                            <label class="col-md-2 control-label" for="prefix">Purchase Price</label>
                            <div class="col-md-1">

                                <input id="PurchasePrice" type="text" class="form-control num3" data-required="false" data-message="Purchase price is required">
                            </div>

                        </div>

                        <div class="form-group tradin">
                            <label class="col-md-2 control-label" for="prefix">Registeration No.</label>
                            <div class="col-md-3">
                                <input id="RegNo" type="text" class="form-control" data-required="required" data-message="Registeration No. is required">
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Engine No</label>
                            <div class="col-md-3">
                                <input id="EngineNo" type="text" class="form-control" data-required="required" data-message="Engine No is required">
                            </div>


                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">File No.</label>
                            <div class="col-md-3">
                                <input id="FileNo" type="text" class="form-control" data-required="required" data-message="File No. is required">
                            </div>



                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Manufacturer</label>
                            <div class="col-md-3">

                                <select id="ManufacturerId" class="form-control select2" data-required="required" data-message="Manufacturer is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Manufactures)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Engine Power (CC)</label>
                            <div class="col-md-3">

                                <select id="EnginePowerId" class="form-control select2" data-required="required" data-message="Engine Power (CC) No is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.EnginePower)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Color</label>
                            <div class="col-md-3">

                                <select id="ColorId" class="form-control select2" data-required="required" data-message="Color is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Colors)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Fuel</label>
                            <div class="col-md-3">

                                <select id="FuelId" class="form-control select2" data-required="required" data-message="Manufacturer is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Fuel)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group hide">

                            <label class="col-md-2 control-label" for="prefix">Brand Name</label>
                            <div class="col-md-3">

                                <select id="BrandNameId" class="form-control select2" data-required="false" data-message="Brand Name is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Brands)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Car Type</label>
                            <div class="col-md-3">

                                <select id="CarTypeId" class="form-control select2" data-required="required" data-message="Fuel is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.CarType)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Clearing Company</label>
                            <div class="col-md-3">

                                <select id="ClearingCompanyId" class="form-control select2" data-required="false" data-message="Clearing Company is required">
                                    <option></option>
                                    @* @foreach (var p in (List<IdName>)ViewBag.ClearingCompany)
                                        {
                                            <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                        }*@
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Year</label>
                            <div class="col-md-3">

                                <select id="YearId" class="form-control select2" data-required="false" data-message="Year is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Year)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Month</label>
                            <div class="col-md-3">

                                <select id="MonthId" class="form-control select2" data-required="false" data-message="Month is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Month)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Description of Motor</label>
                            <div class="col-md-6">
                                <input id="DoM" type="text" class="form-control" data-required="false" data-message="Description of Motor No is required">
                            </div>

                        </div>
                        <div class="portlet-body form">
                            <div class="form-actions">
                                <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                                <div class="col-md-8">
                                    <button type="button" class="btn red purchase-return hide pull-right" onclick="Vehicles.PurchaseReturnInfo()">
                                        <i class="fa fa-trash-o"></i>
                                        Purchase Return
                                    </button>
                                    <button type="button" class="btn btn-primary green" onclick="Vehicles.Save()" data-plus-as-tab="false">Save</button>
                                    <button id="btnCancel" type="button" class="btn btn-default" onclick="Vehicles.CustomClear()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>

