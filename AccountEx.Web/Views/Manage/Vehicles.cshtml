                        <tr>
                            <td colspan="8" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
<div id="inventroy-transfer-Container" class="modal fade hidden-print bs-modal-lg" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <span class='caption-subject font-green-sharp bold'>Inverntory Transfer Request</span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="row installment-form">
                    <div class="form-horizontal" data-save="save">
                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">Owner Branch:</label>
                            <div class="col-md-3">
                                <input type="hidden" id="FromBranchId" />
                                <input type="hidden" id="VehicleId" />
                                <input type="hidden" id="Type" />
                                <span class="label label-sm label-success"><span id="lblownerbranch"></span></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Vehicle:</label>
                            <div class="col-md-3">
                                <span class="label label-sm label-success"><span id="lblvehicle"></span></span>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Receiving Branch</label>
                            <div class="col-md-5">
                                <span class="label label-sm label-success hide" id="lbltobranch"><span></span></span>
                                <select class="form-control select2" id="ToBranchId" placeholder="Select Branch" data-required="required" data-message="branch is required">
                                    <option></option>
                                    @foreach (var item in (List<IdName>)ViewBag.VehicleBranches)
                                    {
                                        <option data-custom="@item.Id" value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Remarks</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" id="Remarks" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-group">
                    <label class="col-md-4 control-label" for="prefix"></label>
                    <button type="button" style="margin-right: 15px;" class="btn btn-primary green contacts-form" onclick="Vehicles.SendTransferRequst()" data-plus-as-tab="false">Save</button>
                    <button type="button" data-dismiss="modal" class="btn btnclose-model">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="model-purchase-return" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">
                    <strong>
                        Purchase Return&nbsp;<span class="Manufacturer"></span>&nbsp;<span class="Model"></span>
                    </strong>
                </h4>
            </div>
            <div class="modal-body" data-save="save">




                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-striped table-hover table-col1-bold" style="margin: 0;">
                            <tbody>
                                <tr class="head">
                                    <td colspan="2" style="text-align: center;">Vehicle Info</td>

                                </tr>


                                <tr>
                                    <td>Chassis No:</td>
                                    <td>
                                        <span class="ChassisNo"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Engine No:</td>
                                    <td>
                                        <span class="EngineNo"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Reg. No:</td>
                                    <td>
                                        <span class="RegNo"></span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>C.C:</td>
                                    <td>
                                        <span class="EnginePower"></span>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-striped table-hover table-col1-bold" style="margin: 0;">
                            <tbody>

                                <tr class="head">
                                    <td colspan="2" style="text-align: center;">Vendor & Purchase Info</td>

                                </tr>
                                <tr>
                                    <td>Vendor:</td>
                                    <td><span class="LocalVendor"></span></td>
                                </tr>
                                <tr>
                                    <td>Purchase Price:</td>
                                    <td><span class="PurchasePrice" data-db-type="int" data-formating="true"></span>
                                    <td>
                                </tr>
                                <tr>
                                    <td>Purchase Date:</td>
                                    <td><span class="PurchaseDate" data-db-type="date"></span>
                                    <td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn red" onclick="Vehicles.PurchaseReturn()">
                    <i class="fa fa-trash-o"></i>
                    Return Purchase
                </button>
                <button type="button" data-dismiss="modal" class="btn default">Close</button>

            </div>
        </div>
    </div>
</div>
<div id="jsondata" class="hide">
    <p id="data">@ViewBag.FormSetting</p>
</div>
@section FooterScript
{
    <style type="text/css">
        #model-purchase-return table tr.head {
            text-align: center;
            background-color: #2ab4c0 !important;
        }

        table.table-col1-bold td:first-child {
            font-weight: bold;
        }
    </style>
    <script src="~/Content/AppJS/Manage/Vehicles.js"></script>
    <script>
        jQuery(document).ready(function () {
            Vehicles.init();
        });
    </script>
}
