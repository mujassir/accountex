@using AccountEx.Common
@using AccountEx.BussinessLogic;
@{
    ViewBag.Title = "Site Settings";   
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Site Settings </h1>
}
<style type="text/css">
    .nav-tabs > li > a, .nav-pills > li > a {
        font-size: 13px;
    }

    .nav > li > a {
        padding: 5px 10px;
    }
</style>

<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">

            <div class="portlet-body form">

                <div class="tabbable-custom">

                    <ul class="nav nav-tabs">
                        <li id="lisitesetting" class="active">
                            <a data-toggle="tab" href="#GeneralSetting">General Setting</a>
                        </li>

                        <li>

                            <a data-toggle="tab" tabindex="-1" href="#CompanySetting">Company Setting </a>
                        </li>
                        <li>

                            <a data-toggle="tab" tabindex="-1" href="#UrlSetting">Url Setting </a>
                        </li>
                        <li>

                            <a data-toggle="tab" tabindex="-1" href="#ModuleSetting">Module Setting </a>
                        </li>
                    </ul>

                    <div class="tabbable-custom">
                        <div class="tab-content">
                            <div class="tab-pane active" id="GeneralSetting">
                                <div class="tabbable-custom">
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a data-toggle="tab" tabindex="-1" href="#Misc">Misc
                                            </a>
                                        </li>
                                        <li>
                                            <a data-toggle="tab" tabindex="-1" href="#head-accounts">Head Account</a>
                                        </li>
                                        <li>
                                            <a data-toggle="tab" tabindex="-1" href="#transaction-accounts">Transaction Account</a>
                                        </li>
                                    </ul>
                                    <div class="tabbable-custom">
                                        <div class="tab-content">

                                            <div class="tab-pane active" id="Misc">
                                                @Html.Partial("Settings/_MiscSetting")
                                            </div>
                                            <div class="tab-pane" id="head-accounts">
                                                @Html.Partial("Settings/_HeadAccounts")
                                            </div>
                                            <div class="tab-pane" id="transaction-accounts">
                                                @Html.Partial("Settings/_TransactionAccounts")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="CompanySetting">
                                @Html.Partial("Settings/_CompanySetting")
                            </div>
                            <div class="tab-pane" id="UrlSetting">
                                @Html.Partial("Settings/_UrlSetting")
                            </div>

                            <div class="tab-pane" id="ModuleSetting">
                                @Html.Partial("Settings/_ModuleSetting")

                            </div>

                        </div>
                        <div class="form-actions">
                            <label class="col-md-4 control-label" for="prefix">&nbsp;</label>

                            <div class="col-md-8">
                                <button type="button" class="btn btn-primary green" onclick="SiteSetting.Save()">
                                    <i class="fa fa-check"></i>&nbsp;Save Setting</button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>






@section FooterScript
{
    <script src="~/Content/AppJS/Manage/SiteSetting.js"></script>

    <script>
        jQuery(document).ready(function () {
            SiteSetting.init();
        });
    </script>
}