@using AccountEx.CodeFirst.Models
@using AccountEx.Common
@{
    ViewBag.Title = "Machines";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Machines</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Machines
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="Products.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list
                    </a>
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        @{
                            // Check if any location is marked as default
                            var locations = (List<Location>)ViewBag.Locations;
                            bool hasDefault = locations.Any(x => x.IsDefault);
                            var firstLocation = locations.FirstOrDefault();
                            int firstItemId = firstLocation != null ? firstLocation.Id : 0;
                        }
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Location</label>
                            <div class="col-md-1">
                                <select id="LocationName" class="form-control select2 input-small" data-clear="false" show-clear="false" data-placeholder="Select Location" data-trackchange="true">
                                    <option></option>
                                    @foreach (var item in locations)
                                    {
                                        <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code"
                                                @(item.IsDefault || (!hasDefault && item.Id == firstItemId) ? "selected" : "")>
                                            @item.Name
                                        </option>
                                    }
                                </select>
                                <input type="text" class="hide" id="LocationId" data-clear="false" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Machine Code</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="Machine Code" id="Code" data-plus-as-tab="true" data-required="required" data-message="Machine Code is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Machine Name</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" placeholder="Machine Name" id="Name" data-plus-as-tab="true" data-required="required" data-message="Machine Name is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                            <div class="col-md-3">
                                <label id="Default" class="control-label" for="IsDefault">
                                    <input type="checkbox" id="IsDefault" data-checktrack='false' />
                                    Default Machine
                                </label>
                            </div>
                        </div>
                    </div>
                    @if (SiteContext.Current.RoleAccess.CanCreate)
                    {
                        <div class="form-actions">
                            <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                            <div class="col-md-8">
                                <button type="button" class="btn btn-primary" onclick="Machines.Save()">Save</button>
                                <button id="btnCancel" type="button" class="btn btn-default" onclick="Machines.ListView()">Cancel</button>
                            </div>
                        </div>
                    }


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Machines Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn blue" onclick="Machines.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="Machines.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>

                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                </div>
            </div>

            <div class="portlet-body">
                <div class="hide alert alert-danger container-message">
                    <i class="close" onclick="$(this).parent().hide();"></i>
                    <strong></strong>
                    <div class="form-body message-content"></div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Machine Code</th>
                            <th>Machine Name</th>
                            <th>Default Machine</th>

                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="11">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Manage/Machines.js"></script>
    <script>
        jQuery(document).ready(function () {
            Machines.init();
        });
    </script>
}
