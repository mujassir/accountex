@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Employees";   
}
@section PageTitle
{

    <h1 class="font-green-sharp bold">Employees List </h1>
}

<!-- END PAGE HEADER-->
<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
           <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Report Data
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove hide"></a>
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
                <div class="actions">
                    <button class="btn blue hidden-print" onclick="window.print();"><i class="fa fa-print"></i>&nbsp;Print </button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable" data-export='true'>
                    <thead>
                        <tr>
                            <th>SN</th>
                            <th>Code</th>
                            <th>Name</th>
                            <th>S/O</th>
                            <th>CNIC</th>
                            <th>Phone</th>
                            @*<th>Designation</th>*@
                            <th>Qualification</th>
                            <th>Deployment</th>
                          @*  <th>Salary</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="11" class="align-center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Reports/Listing.js"></script>
    <script>
        jQuery(document).ready(function () {
            Listing.init("Employee");
        });
    </script>
}
