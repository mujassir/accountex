@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Projects";   
}
<style type="text/css">
    #PR_mainTable_wrapper .row:first-child, #PR_mainTable_wrapper .row:last-child {
        display: none;
    }
</style>
@section PageTitle
{

    <h1 class="font-green-sharp bold">Project List</h1>
}
<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Data
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable" data-export='true'>
                    <thead>
                        <tr>
                            <th style="width: 8px;" class="no-sort">SN
                            </th>
                            <th>No.</th>
                            <th>Name</th>
                            <th>Client</th>
                            <th>PO #</th>
                            @*<th>Issued</th>*@
                            <th>Start</th>
                            <th>End</th>
                            <th>Gross Cost</th>
                            <th>Receipts</th>
                            <th class='align-right'>Balance</th>

                            @*<th>Workscope</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="11" class="align-center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>

@section FooterScript
{
    <script src="~/Content/AppJS/Reports/Projects.js"></script>
    <script>
        jQuery(document).ready(function () {
            Project.init();
        });
    </script>
}
