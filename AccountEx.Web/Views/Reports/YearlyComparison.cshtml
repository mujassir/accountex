@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "YearlyComparison";   
}
@section PageTitle
{

    <h1 class="font-green-sharp bold">Comparison List </h1>
}

<!-- END PAGE HEADER-->
<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Report Data
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove hide"></a>
                </div>
                <div class="actions">
                    <button class="btn blue large pull-right" onclick="window.print();"><i class="fa fa-print"></i>&nbsp;Print </button>
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
            </div>
            <div class="portlet-body">
                <table id="table-yearly-sale-purchase-sumamry" class="table table-striped table-bordered report-table" data-export='true'>
                    <thead>
                    </thead>

                    <tbody>
                    </tbody>
                </table>
                <div class="graph-container">
                    <div id="echarts_bar" style="height: 600px;"></div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
@section FooterScript
{
      <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/metronic/assets/global/plugins/echarts/echarts.js" type="text/javascript"></script>
    <script src="~/Content/AppJS/Reports/YearlyComparison.js"></script>
    <script>
        jQuery(document).ready(function () {
            YearlyComparison.init();
        });
    </script>
}
