@model AccountEx.Web.Models.GeneralLedgerModel
@using AccountEx.Common;
@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Yearly Sale Purchase Summary";   
}
<style type="text/css">
    #tbldetail tfoot {
        font-weight: bold;
    }

    /*.report-table tbody tr td:nth-last-child(1),
    .report-table tbody tr td:nth-last-child(2),
    .report-table tfoot tr td:nth-last-child(1),
    .report-table tfoot tr td:nth-last-child(2) {
        text-align: left;
    }*/

    .report-table tbody tr td:nth-child(2) {
        text-align: right;
    }

    /*.sub-head {
        text-align: left;
    }*/
</style>
@section PageTitle
{

    <h1 class="font-green-sharp bold"><span class="main-title">Yearly Sale Purchase Summary</span>
        <small id="lblReportDate" class="pull-right small visible-print">Date: 24/10/2014</small></h1>
}
<div class="row hidden-print" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter"></i>Report Filters
                </div>
                <div class="actions">
                    <button class="btn blue large pull-right" onclick="window.print();"><i class="fa fa-print"></i>&nbsp;Print </button>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="Save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">

                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">Report Type</label>
                            <div class="col-md-3">
                                <select id="ReportType" class="select2 form-control">
                                    <option value="Sale">Sale</option>
                                    <option value="Purchase">Purchase</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                            <div class="col-md-8">
                                <button id="btnShowReport" type="submit" class="btn btn-primary">Show Report</button>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-xs-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Yearly Comparison              
                </div>
                <div class="tools hide">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
            </div>
            <div class="portlet-body">
                <table id="table-yearly-sale-purchase-sumamry" class="table table-striped table-bordered report-table" data-export='true'>
                    <thead>
                    </thead>

                    <tbody>
                    </tbody>
                </table>
                <div class="graph-container">
                    <div id="echarts_bar" style="height: 600px;"></div>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>



</div>

<div id="jsondata" class="hide">
    <input id="FormSetting"  type="text" value="@ViewBag.FormSetting" />
    @* <input id="OpeningBalances"  type="text" value="@ViewBag.OpeningBalances" />*@
    <input id="Voucher"  type="text" value="@ViewBag.Voucher" />
</div>
@section FooterScript
{
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src="~/Content/metronic/assets/global/plugins/echarts/echarts.js" type="text/javascript"></script>
    <script src="~/Content/AppJS/Reports/SalePurchaseSummary.js"></script>
    <script>
        jQuery(document).ready(function () {
            SalePurchaseSummary.init();
        });
    </script>
}

