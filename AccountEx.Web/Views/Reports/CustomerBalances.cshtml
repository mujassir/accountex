@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Customer Balances";
}
@using AccountEx.Common;
<style type="text/css">
    .report-table tfoot {
        font-weight: bold;
    }

    /*.report-table tbody tr td:nth-last-child(1),
        .report-table tbody tr td:nth-last-child(2),
        .report-table tfoot tr td:nth-last-child(1),
        .report-table tfoot tr td:nth-last-child(2) {
            text-align: right;
        }*/

    .report-div label.header, .report-div label.title {
        font-size: 1.5em;
    }
</style>
<link href="~/Content/site-v1.css" rel="stylesheet" />
@section PageTitle
{

    <h1 class="font-green-sharp bold">Customer Balances<small id="lblReportDate" class="pull-right small visible-print">Date: 24/10/2014</small> </h1>
}

<div class="row hidden-print" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter"></i>Report Filters
                </div>

                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="javascript:;" class="remove"></a>*@
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">From Date</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium">
                                    <input class="date-picker form-control date-picker" type="text" id="FromDate" data-validate="true" data-required="required" value="@SiteContext.Current.Fiscal.FromDate.ToString(AppSetting.DateFormat)" data-message="@Resources.Resource.Date" data-fiscal-date="true">
                                    <span class="input-group-btn date-icon">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">To Date</label>
                            <div class="col-md-3">
                                <div class="input-group input-medium">
                                    <input class="date-picker form-control date-picker" type="text" id="ToDate" data-validate="true" data-required="required" value="@SiteContext.Current.Fiscal.ToDate.ToString(AppSetting.DateFormat)" data-message="@Resources.Resource.Date" data-fiscal-date="true">
                                    <span class="input-group-btn date-icon">
                                        <button class="btn default" type="button"><i class="fa fa-calendar"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">City</label>
                            <div class="col-md-3">
                                <select id="CityName" class="form-control select2">
                                    <option value="0" selected="selected">All Cities</option>
                                    @foreach (var p in (List<IdName>)ViewBag.Cities)
                                    {
                                        <option data-custom="@p.Name">@p.Name.Trim()</option>
                                    }
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Group</label>
                            <div class="col-md-3">
                                <select id="GroupName" class="form-control select2">
                                    <option value="0" selected="selected">All Groups</option>
                                    @foreach (var p in (List<IdName>)ViewBag.Groups)
                                    {
                                        <option data-custom="@p.Name.Trim()">@p.Name.Trim()</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button id="btnShowReport" type="submit" class="btn btn-primary">Show Report</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<div class="row hide" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Report Data
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="remove"></a>
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button"); }
                </div>
            </div>
            <div class="portlet-body report-div">
                <div class="group-record-container">
                    <span>
                        <label class="header">City Name: </label>
                        &nbsp<label class="title"></label>
                    </span>
                    <table class="table table-striped table-bordered table-hover report-table" data-export='true'>
                        <thead>
                            <tr>
                                <th style="width: 70px;">Code</th>
                                <th>Account Name</th>
                                <th style="width: 150px;" class='align-right num3'>Debit</th>
                                <th style="width: 150px;" class='align-right num3'>Credit</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot></tfoot>
                    </table>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


@section FooterScript
{
    <script src="~/Content/AppJS/Reports/CustomerBalances.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            CustomerBalances.init();
        });
    </script>
}
