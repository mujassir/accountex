@model AccountEx.CodeFirst.Models.Sale
@using System.Linq;
@{
   
    ViewBag.Title = "Sale Summary";  
}
<div class="row-fluid">
    <div class="span12">
        <h2 class="page-title">&nbsp<span class="formtitle">بل					</span></h2>
    </div>
</div>

<div class="row-fluid" id="masterdetail">
    <section class="widget">

        @using (Html.BeginForm())
        {
            <div id="form-info" data-save='Save' class="form-horizontal label-left ">
                <div class="row-fluid">
                    <div class="span2">
                        <input type="submit" value="ڈسپلے رپورٹ" class="btn btn-primary btn-large" />

                    </div>
                    <div class="span5">
                        <label class="control-label" for="prefix">وائچر نمبر</label>
                        <div class="controls controls-row">
                            <input type="text" name="VoucherNumber" id="VoucherNumber" />
                        </div>

                    </div>
                </div>
            </div>
                 
        }
        <br />

        @if (Model != null)
        {
            <div class="body">



                 <div  data-save='Save' class="form-horizontal label-left ">
                     
                <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3">
                        <label class="control-label" for="prefix">تفصیل اخراجات</label>

                    </div>
                     <div class="span3">
                        <label class="control-label" for="prefix">بل</label>

                    </div>
                   
                </div>
                <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"> <label class="control-label" for="prefix"> @Model.Commission :کمیشن </label></div>
                    <div class="span3"> <label class="control-label" for="prefix"> @Model.AccountTitle :بیوپاری </label></div>
                </div>
                      <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.Labour :مزدوری </label></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.SaleItems.Sum(prop=>prop.Quantity) :تعداد مال </label></div>
                </div>
                         <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.Fare :کرایہ </label></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.GrassBikri :خام بکری </label></div>
                </div>
                       <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.Munshyiana :منشیانہ </label></div>
                </div>
                       <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.Misc :متفرق خرچ </label></div>
                </div>
                       <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.ExpenseTotal :کل خرچ </label></div>
                </div>
                         <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"></div>
                    <div class="span5"><label class="control-label" for="prefix"> @Model.GrassBikri  :خام بکری </label></div>
                </div>
                     
                         <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.ExpenseTotal :کل خرچ </label></div>
                </div>
                      <div class="row-fluid">
                    <div class="span2"></div>
                    <div class="span3"></div>
                    <div class="span3"><label class="control-label" for="prefix"> @Model.NetBikri  : پختہ بکری </label></div>
                </div>
                     
            </div>
                

            </div>
        }
    </section>
</div>

