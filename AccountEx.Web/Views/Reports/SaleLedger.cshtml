@model AccountEx.Web.Models.SaleLedgerModel
@{
   
    ViewBag.Title = "Sale Ledger";  
}
@using System.Globalization;
<div class="row-fluid">
    <div class="span12">
        <h2 class="page-title">&nbsp<span class="formtitle">بکری تفصیل بمعہ اخراجات											
        </span></h2>
    </div>
</div>
<div class="row-fluid" id="masterdetail">
    <section class="widget">


        @using (Html.BeginForm())
        {

            <div class="body">
                <div id="form-info" data-save='Save' class="form-horizontal label-left ">
                    <div class="row-fluid">
                        <div class="span2">
                            <input type="submit" value="ڈسپلے رپورٹ" class="btn btn-primary btn-large" />

                        </div>

                        <div class="span4">
                            <label class="control-label" for="prefix">تاریخ سے</label>
                            <div class="controls controls-row">
                                @Html.TextBoxFor(model => model.FromDate, new { @class = "date-picker1", @Value = Model.FromDate.ToString("yyyy/MM/dd") })
                            </div>

                        </div>
                        <div class="span5">
                            <label class="control-label" for="prefix">تاریخ تک</label>
                            <div class="controls controls-row">
                                @Html.TextBoxFor(model => model.ToDate, new { @class = "date-picker1", @Value = Model.ToDate.ToString("yyyy/MM/dd") })
                            </div>

                        </div>

                    </div>
                </div>
                <br />


                @if (Model.Sales != null && Model.Sales.Count > 0)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>پختہ بکری
                                </th>
                                <th>کل خرچہ
                                </th>
                                <th>متفرق خرچہ
                                </th>
                                <th>منشیانہ
                                </th>
                                <th>کرایہ
                                </th>
                                <th>مارکیٹ فیس
                                </th>
                                <th>مزدوری
                                </th>
                                <th>کمشین
                                </th>
                                <th>خام بکری
                                </th>
                                <th>تعداد نگ
                                </th>
                                <th>@Resources.Resource.Date
                                </th>
                                <th>گاڑی ںمبر
                                </th>
                                <th>نام بیوپاری
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.Sales)
                            {
                                <tr>
                                    <td>@item.NetBikri </td>
                                    <td>@item.ExpenseTotal </td>
                                    <td>@item.Fare </td>
                                    <td>@item.Munshyiana  </td>
                                    <td>@item.Fare </td>
                                    <td>@item.Markeet </td>
                                    <td>@item.Labour </td>
                                    <td>@item.Commission </td>
                                    <td>@item.GrassBikri  </td>
                                    <td>@item.SaleItems.Sum(prop => prop.Quantity) </td>
                                    <td>@item.Date.Value.ToString("dd-MMM-yyyy", new CultureInfo("en-US"))</td>
                                    <td>@item.Vehicle </td>
                                    <td>@item.AccountTitle  </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                }
            </div>
        }
    </section>
</div>

