@{
    Layout = "_Layout.cshtml";
    ViewBag.Title = "Post Dated Cheque";   
}
@using AccountEx.Common;

@section PageTitle
{

    <h1 class="font-green-sharp bold">
        <span class="main-title">PostDated Cheque </span>
        <small id="lblReportDate" class="pull-right small visible-print">Date: 24/10/2014</small>

    </h1>
}

<!-- END PAGE HEADER-->

<div class="row hidden-print" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter"></i>Report Filters
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                </div>
                <div class="actions">
                    <button class="btn blue hidden-print" onclick="window.print();"><i class="fa fa-print"></i>&nbsp;Print </button>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="Save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">


                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Bank</label>
                            <div class="col-md-3">
                                <select id="BankId" class="form-control Filterselect2 banks">
                                    <option></option>

                                </select>
                            </div>

                            <label class="col-md-2 control-label" for="prefix">Cheque No</label>
                            <div class="col-md-3">
                                <input id="ChequeNo" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Status</label>
                            <div class="col-md-3">

                                <select id="Status" class="form-control Filterselect2">
                                    <option></option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Clear))">Clear</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Dishonour))">Dishonour</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Hold))">Hold</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.PaidCash))">PaidCash</option>
                                     <option value="@((int)(VehiclePostDatedChequeType.PresentAndWaitingToClear))">Present And Waiting To Clear</option>
                                </select>
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Customer</label>
                            <div class="col-md-3">

                                <select id="VehicleSaleId" class="form-control select2">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <div class="form-group">

                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button id="btnShowReport" type="submit" class="btn btn-primary">Show Report</button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>
<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Report Data
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
            </div>
            <div class="portlet-body">
                <table id="mainTable" class="table table-striped table-bordered table-hover report-table" data-export='true'>
                    <thead>
                        <tr>
                            <th>SR</th>
                            <th>CHQ NO </th>
                            <th>CHEQUE DATE </th>
                            <th>CUSTOMER NAME</th>
                            <th>Chassis No</th>
                            <th>REG NO</th>
                            <th>AMOUNT </th>
                            <th>CHEQUE DEPOSIT DATE</th>
                            <th>BANK NAME</th>
                            <th>STATUS</th>
                            <th>REMARKS</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<div id="jsondata" class="hide">
    <p id="data">@ViewBag.Settings</p>
</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Reports/VehiclePostDatedCheque.js"></script>



    <script>
        jQuery(document).ready(function () {
            VehiclePostDatedCheque.init();
        });
    </script>
}
