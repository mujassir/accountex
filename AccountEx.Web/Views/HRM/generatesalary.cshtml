@using AccountEx.Common;
@using AccountEx.BussinessLogic;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage Generate Salary</h1>
}
<style>
    table.table tr th
    {
        font-size: 13px;
    }

    table.table tr td
    {
        padding: 2px 6px;
        font-size: 13px;
    }

        table.table tr td select
        {
            border-width: 0;
            background-color: transparent;
            padding: 0;
            margin: 0;
            height: 20px;
        }

        table.table tr td input[type='text']
        {
            padding: 0;
            margin: 0;
            border-width: 0;
            height: 20px;
            background-color: transparent;
            width: 100%;
        }

        table.table tr td input[type='text']
        {
            width: 100% !important;
        }

