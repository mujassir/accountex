@{
    
    ViewBag.Title = "Doctor";   
}

@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Doctors</h1>
}
<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Doctors
                </div>
            </div>
            <div class="portlet-body form">
                  <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Doctor Name:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="Name" >
                                </div>
                                <label class="col-md-2 control-label">Speciality:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="Speciality">
                                </div>
                                <label class="col-md-2 control-label">Area Manager:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="AreaManager">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Designation:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="Designation" >
                                </div>
                                <label class="col-md-2 control-label">Timmings:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="Timing">
                                </div>
                                <label class="col-md-2 control-label">Sale Rep:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="SaleRep" data-validate="true" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Clinic Name:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="ClinicName" >
                                </div>
                                <label class="col-md-2 control-label">Address:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="Address" data-validate="true">
                                </div>
                                <label class="col-md-2 control-label">Medecine:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="Medecine" data-validate="true" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Phone Number:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="PhoneNumber">
                                </div>
                                <label class="col-md-2 control-label">City:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="City">
                                </div>
                                <label class="col-md-2 control-label">Medecal Store:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="MedicalStore">
                                </div>
                            </div>
                            <div class="form-group">

                                <label class="col-md-2 control-label">Amount Allocation:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control" id="AmmountAllocation">
                                </div>
                                <label class="col-md-2 control-label">Estimate Sale:</label>
                                <div class="col-md-2">
                                    <input type="text" class="form-control " id="EstimateSale">
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label">Remarks:</label>
                                <div class="col-md-6">
                                    <textarea class="form-control " id="Remark"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary green" onclick="Doctors.Save()" data-plus-as-tab="false">Save</button>
                            <button type="button" class="btn btn-primary hide green" onclick="Doctors.SaveClose()" data-plus-as-tab="false">Save & Close</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="Doctors.CustomClear()">Cancel</button>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Doctor Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn green" onclick="Doctors.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn green hide" onclick="Doctors.Save()" data-plus-as-tab="false"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Area Manager</th>
                             <th>Designation</th>
                             <th>Contact Number</th>
                             <th>City</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Pharmaceutical/Doctors.js"></script>

    <script>
        jQuery(document).ready(function () {
            Doctors.init();
        });
    </script>
}
