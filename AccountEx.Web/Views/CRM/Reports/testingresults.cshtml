@{
    Layout = "~/Views/Reports/_Layout.cshtml";
    ViewBag.Title = "Testing Results";
}
@using AccountEx.Common;

@section PageTitle
{

    <h1 class="font-green-sharp bold">

        <span class="main-title">@ViewBag.Title</span>
        <small id="lblReportDate" class="pull-right small visible-print">
        </small>

    </h1>
}

<div class="row hidden-print" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-filter"></i>Report Filters
                </div>

                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="javascript:;" class="remove"></a>*@
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Product</label>
                            <div class="col-md-6">
                                <select id="ProductIds" multiple="multiple" class="form-control select2" placeholder="Select product" data-required="required" data-message="product is required" data-clear='true'></select>
                                <input type="hidden" id="Product" />
                            </div>
                            <div class="col-md-2">
                                <label id="lblselectAll" class="control-label" for="chkselect_all-select2-option-db">
                                    <input type="checkbox" id="chkselect_all-select2-option-db" data-checktrack='false' />
                                    Select All
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button id="btnShowReport" type="submit" class="btn btn-primary">Show Report</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title hidden-print">
                <div class="caption">
                    <i class="fa fa-list"></i>Summary
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    @*<a href="javascript:;" class="remove"></a>*@
                </div>
                <div class="tools pull-right">
                    @{ Html.RenderPartial("_Export_Button");  }
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-responsive">
                    <table id="tbl-sale-detail" class="table table-striped table-bordered table-hover report-table" data-export='true'>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Lab #</th>
                                <th>Created By</th>
                                <th>Region</th>
                                <th>Customer</th>
                                <th>Case Type</th>
                                <th>Product</th>
                                <th>Counter Product</th>
                                <th>Priority</th>
                                <th>Testing Required</th>
                                <th>Testing Labe</th>
                                <th>Status</th>
                                <th>Resolved By</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/CRM/Reports/TestingResults.js"></script>
    <script>
        jQuery(document).ready(function () {
            TestingResults.init();
        });
    </script>
}
