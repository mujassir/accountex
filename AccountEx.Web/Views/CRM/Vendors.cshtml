@using AccountEx.Common
@{
    ViewBag.Title = "Vendors";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Vendor</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Vendor
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Type</label>
                            <div class="col-md-4">
                                <select class="form-control select2" id="Type">
                                    <option value="@((byte)CRMVendorType.Default)">Default</option>
                                    <option value="@((byte)CRMVendorType.Import)">Import</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Name" data-required="required" data-message="Name is required" />
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Contact Person</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="ContactPerson" data-required="required" data-message="Contact Person is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Supplier</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Supplier" data-required="false" data-message="Supplier is required" />

                            </div>
                            <label class="col-md-1 control-label" for="prefix">Phone #.</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="CellNo" data-required="required" data-message="Phone # is required" />
                            </div>

                            

                        </div>
                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">Email</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Email" />
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Fax</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Fax" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Web</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Web" />
                            </div>
                            <label class="col-md-1 control-label" for="prefix">NTN</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="NTN" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Address</label>
                            <div class="col-md-5">
                                <textarea class="form-control" id="Address" rows="2"></textarea>
                            </div>

                        </div>

                    </div>

                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" id="btn-save" class="btn btn-primary">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
            </div>

            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>

                            <th>Name</th>
                            <th>Supplier</th>
                            <th>Contact Person</th>
                            <th>Email</th>
                            <th>Phone #</th>
                            <th>Web</th>
                            <th>NTN</th>
                            <th>Email</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="9">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/CRM/Vendors.js"></script>
    <script>
        jQuery(document).ready(function () {
            Vendor.init();
        });
    </script>
}
