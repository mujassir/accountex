@using AccountEx.Common
@{
    ViewBag.Title = "Merge Products";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">@ViewBag.Title</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Category
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Merge From</label>
                            <div class="col-md-5">
                                <select class="form-control select2" id="FromProductId" data-required="required" data-message="Product is required" placeholder="select product"></select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Merge To</label>
                            <div class="col-md-5">
                                <select class="form-control select2" id="ToProductId" data-required="required" data-message="Product is required" placeholder="select product"></select>

                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" id="btn-save" class="btn btn-primary">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
@section FooterScript
{

<script src="~/Content/AppJS/CRM/MergeProduct.js"></script>
    <script>
        jQuery(document).ready(function () {
            MergeProduct.init();
        });
    </script>
}
