@using AccountEx.Common
@{
    ViewBag.Title = "Contact Book";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Contact</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Contacts
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">First Name</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="FirstName" data-required="required" data-message="First Name is required" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Last Name</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="LastName" data-required="required" data-message="Last Name is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Cell No.</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="CellNo" data-required="required" data-message="Cell No is required" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Office No.</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="OfficeNo" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Home No.</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="HomeNo" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Email</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Email" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Web</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Web" />
                            </div>
                            <label class="col-md-2 control-label" for="prefix">Company</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="Company" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Address</label>
                            <div class="col-md-6">
                                <textarea class="form-control" id="Address" rows="4"></textarea>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Group</label>
                            <div class="col-md-4">
                                <select class="form-control select2" id="GroupId" data-required="false" data-message="Group is required" placeholder="select group">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.Groups)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }

                                </select>

                            </div>
                        </div>
                    </div>


                </div>

                <div class="form-actions">
                    <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                    <div class="col-md-8">
                        <button type="button" id="btn-save" class="btn btn-primary">Save</button>
                        <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
                    </div>
                </div>

            </div>

        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
            </div>

            <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>

                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Cell No</th>
                            <th>Company</th>
                            <th>Web</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="2">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>
@section FooterScript
{
    <script src="~/Content/AppJS/CRM/Contacts.js"></script>
    <script>
        jQuery(document).ready(function () {
            Contact.init();
        });
    </script>
}
