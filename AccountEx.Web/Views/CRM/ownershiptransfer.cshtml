@using AccountEx.Common
@{
    ViewBag.Title = "Ownership Transfer";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">@ViewBag.Title</h1>
}


<!-- END PAGE HEADER-->

<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Transfer Detail
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <input type="text" id="AccountId" class="hide" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">From</label>
                            <div class="col-md-4">
                                <select id="FromSalePersonId" class="form-control select2" placeholder="Select from sale person" data-required="required" data-message="From sale person is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.SalePersons)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label master-account-label" for="prefix">Organization</label>
                            <div class="col-md-6">
                                <select class="form-control select2" id="CustomerId" data-required="required" data-message="Organization is required" placeholder="select Organization">
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">To</label>
                            <div class="col-md-4">
                                <select id="ToSalePersonId" class="form-control select2" placeholder="Select to sale person" data-required="required" data-message="To sale person is required">
                                    <option></option>
                                    @foreach (var p in (List<IdName>)ViewBag.SalePersons)
                                    {
                                        <option data-custom="@p.Id" value="@p.Id">@p.Name</option>
                                    }
                                </select>

                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" id="btn-save" class="btn btn-primary">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default">Cancel</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

@section FooterScript
{
<script src="~/Content/AppJS/CRM/OwnershipTransfer.js"></script>
    <script>
        jQuery(document).ready(function () {
            OwnershipTransfer.init();
        });
    </script>
}
