@{
    ViewBag.Title = "Parameters";  
}
@using AccountEx.Common;
@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Parameters</h1>
}
<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Parameters
                </div>
                <div class="actions">
                    <a href="javascript:;" class="btn green" onclick="Parameter.ListView();">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Test Group</label>
                            <div class="col-md-3">
                                <select id="TestGroupId" class="form-control select2" data-required="required" data-message="Test Group is required" data-clear='true'>
                                    <option></option>
                                    @foreach (var item in (List<IdName>)ViewBag.TestGroup)
                                    {
                                        <option data-custom="@item.Id" value="@item.Id">@(item.Name)</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="Name" data-required="required" data-validate="true" data-message="Parameter Name is required" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Unit</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="Unit" data-required="required" data-message="Unit is required"  />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Min Value</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="MinValue" data-required="required" data-message="Minimum value is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Max Value</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="MaxValue" data-required="required" data-message="Maximum value is required" />
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary green" onclick="Parameter.Save()" data-plus-as-tab="false">Save</button>
                            <button type="button" class="btn btn-primary green" onclick="Parameter.SaveClose()">Save & Close</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="Parameter.CustomClear()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-mdi-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Parameters Listing
                </div>
                <div class="actions hide">
                    <button id="btnAdd" type="button" class="btn green" onclick="Parameter.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th style="width:8px;" class="no-sort">
                                <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                            </th>
                            <th>Name</th>
                            <th>Unit</th>
                            <th>Minimum Val</th>
                            <th>Maximum Val</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


@section FooterScript
{
<script src="~/Content/AppJS/Lab/Parameter.js"></script>
    <script>
        jQuery(document).ready(function () {
            Parameter.init();
        });
    </script>
}
