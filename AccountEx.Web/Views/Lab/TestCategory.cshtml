
@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Test Category </h1>
}
@{
    ViewBag.Title = "Test Category";
}
@using AccountEx.Common;

<div class="row" id="div-form">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            @* <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Add/Edit Detail
                    </div>
                    <div class="actions hide">
                        <a href="javascript:;" onclick="Categories.ListView()" class="btn green">
                            <i class="fa fa-angle-left"></i>&nbsp;Back to list
                        </a>
                    </div>
                </div>*@
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control " id="Name" data-required="required" data-validate="true" data-message="Name is required" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Category</label>
                            <div class="col-md-3">
                                <select id="ParentId" class="form-control Filterselect2" data-required="false" data-message="Test Group is required" data-clear='true'>
                                    <option></option>
                                    @foreach (var item in (List<IdName>)ViewBag.TestCategories)
                                    {
                                        <option data-custom="@item.Id" value="@item.Id">@(item.Name)</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary green" onclick="TestCategory.Save()" data-plus-as-tab="false">Save</button>
                            <button type="button" class="btn btn-primary hide green" onclick="TestCategory.SaveClose()">Save & Close</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="TestCategory.CustomClear()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
                <div class="actions hide">
                    <button id="btnEdit" type="button" class="btn green" onclick="TestCategory.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn green hide" onclick="TestCategory.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th style="width: 8px;" class="no-sort">
                                <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                            </th>
                            <th>Name</th>

                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


@section FooterScript
{

    <script src="~/Content/AppJS/Lab/TestCategory.js"></script>
    <script>
        jQuery(document).ready(function () {
            TestCategory.init();
        });
    </script>
}
