@section PageStyle
{
    <link href="~/Content/NTDeliveryChallan.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Delivery Challan";   
}
@using AccountEx.Common;
@{
    var type = Request.QueryString["type"] + "";
    var label = "";
    var qtyLabel = "";
    var reporttitle = "";
    switch (type.ToLower())
    {
        case "goodissue":
            ViewBag.FormTitle = "GIN";
            label = "GIN";
            qtyLabel = "Actual Weight Total ";
            reporttitle = "Good Issue Note";
            break;
        case "goodreceive":
            ViewBag.FormTitle = "GRN";
            label = "GRN";
            qtyLabel = "Quantity Total";
            reporttitle = "Good Receive Note";
            break;
    }
    ViewBag.Title = ViewBag.FormTitle;
}
@section PageTitle
{
    <h1 class="font-green-sharp bold hidden-print">Manage @ViewBag.Title</h1>
}
@using AccountEx.BussinessLogic;
@{
    type = Request["type"].ToLower();
    var vouchertype = ((VoucherType)Enum.Parse(typeof(VoucherType), type, true));
    var error = "";
    switch (type)
    {
        case "goodissue":

            if (SettingManager.CustomerHeadId == 0 && SettingManager.CashAccountId == 0)
            {
                error += "<li>Customer or cash account is missing.</li>";

            }
            break;
        case "goodreceive":
            if (SettingManager.SupplierHeadId == 0)
            {
                error += "<li>Supplier account is missing.</li>";

            }
            break;

    }
    if (SettingManager.GstSaleAccountHeadId == 0)
    {
        error += "<li>GST sale account is missing.</li>";

    }
    if (SettingManager.GstHeadId == 0)
    {
        error += "<li>GST account is missing.</li>";

    }
    if (SettingManager.SaleAccountHeadId == 0)
    {
        error += "<li>Sale account is missing.</li>";

    }
    if (SettingManager.ProductHeadId == 0)
    {
        error += "<li>Product Account is Missing.</li>";

    }
    if (SettingManager.PurchaseAccountHeadId == 0)
    {
        error += "<li>Purchase account is missing.</li>";

    }
    if (SettingManager.GstPurchaseAccountHeadId == 0)
    {
        error += "<li>GST Purchase account is missing.</li>";

    }
    if (SiteContext.Current.Fiscal == null)
    {
        error += "<li>No Fiscal year found.</li>";
    }
    var allowRate = false;
    if (vouchertype == VoucherType.GoodIssue && SettingManager.IsGINAllowRate)
    {
        allowRate = true;
    }
    else if (vouchertype == VoucherType.GoodReceive && SettingManager.IsGRNAllowRate)
    {
        allowRate = true;
    }
    
}
@if (!string.IsNullOrWhiteSpace(error))
