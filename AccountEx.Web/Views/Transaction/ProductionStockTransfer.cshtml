@using AccountEx.CodeFirst.Models
@section PageStyle
{
    <link href="~/Content/InternalStockTransfer.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Production Stock Transfer";
}
@using AccountEx.BussinessLogic;
@using AccountEx.Common;

@{

    var error = "";
    if (SettingManager.ProductHeadId == 0)
    {
        error += "<li>Product Account is Missing.</li>";

    }
    if (SiteContext.Current.Fiscal == null)
    {
        error += "<li>No Fiscal year found.</li>";
    }
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="note note-danger note-bordered">
        <h4 class="block">Head Account Missing</h4>
        <div>
            <i class="fa-lg fa fa-warning"></i>Head Account is missing in the application settings.In order to complete current transaction head accounts must be added in settings.<br />


            <ul>
                @Html.Raw(error)
            </ul>


            Add missing head accounts in settings and then try again by <a href="@Request.Url"><i class="fa fa-refresh"></i>&nbsp;Relaoding</a>&nbsp;the current page.
        </div>
    </div>
}
else
{
    @section PageTitle
{
        <h1 class="font-green-sharp bold hidden-print">Manage Production Stock Transfer</h1>
    }
    //hide
    <div class="hidden-print" id="form-info">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Add/Edit Production Stock Transfer
                    </div>
                    <div class="actions hide">
                        <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('previous')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Back
                        </a>
                        <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('next')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Next
                        </a>

                    </div>
                </div>
                <div class="portlet-body form">

                    <div id="mainform" class="form-horizontal" data-save="save">

                        <input type="text" id="Id" class="hide" data-include-in-item="true" data-item-id="InternalStockTransferId" />
                        <input type="text" id="CreatedDate" class="hide date-picker" data-clear-type="date" />
                        <input type="text" id="IsDeleted" class="hide" />
                        <input type="text" id="Status" class="hide" />
                        <input type="text" id="PreVoucherNumber" class="hide" />
                        <div class="form-body">
                            <div class="hide alert alert-danger container-message">
                                <i class="close" onclick="$(this).parent().hide();"></i>
                                <strong></strong>
                                <div class="form-body message-content"></div>
                            </div>
                            @{
                                // Check if any location is marked as default
                                var locations = (List<Location>)ViewBag.Locations;
                                bool hasDefault = locations.Any(x => x.IsDefault);
                                var firstLocation = locations.FirstOrDefault();
                                int firstItemId = firstLocation != null ? firstLocation.Id : 0;
                            }
                            @if (locations.Count > 0 && SettingManager.IsMultipleLocationEnabled)
                            {
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="prefix">From Location</label>
                                    <div class="col-md-1">
                                        <select id="FromLocationName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Location" data-trackchange="true">
                                            @foreach (var item in locations)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code"
                                                        @(item.IsDefault || (!hasDefault && item.Id == firstItemId) ? "selected" : "")>
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="FromLocationId" data-clear="false" />
                                    </div>
                                    <label class="col-md-2 control-label" for="prefix">To Location</label>
                                    <div class="col-md-2">
                                        <select id="ToLocationName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Location" data-trackchange="true">
                                            @foreach (var item in locations)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code"
                                                        @(item.IsDefault || (!hasDefault && item.Id == firstItemId) ? "selected" : "")>
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="ToLocationId" data-clear="false" />
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2">
                                            <label id="IsReturnActive" class="control-label" for="IsReturn">
                                                <input type="checkbox" id="IsReturn" data-checktrack='false' />
                                                Is Return
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            }
                            @{
                                // Check if any location is marked as default
                                var machines = (List<Machine>)ViewBag.Machines;
                                bool hasWDefault = machines.Any(x => x.IsDefault);
                                var firstMachine = machines.FirstOrDefault();
                                int firstWItemId = firstMachine != null ? firstMachine.Id : 0;
                                // Check if any location is marked as default
                                var Warehouses = (List<WareHouse>)ViewBag.Warehouses;
                            }
                            @if (machines.Count > 0)
                            {
                                <div id="StockPropDiv" class="form-group">
                                    <label class="col-md-2 control-label" for="prefix">From Warehouse</label>
                                    <div class="col-md-1">
                                        <select id="FromWarehouseName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Machine" data-trackchange="true">
                                            @foreach (var item in Warehouses)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code" data-location="@item.LocationId">
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="FromWarehouseId" data-clear="false" />
                                    </div>
                                    <label class="col-md-2 control-label" for="prefix">To Machine</label>
                                    <div class="col-md-2">
                                        <select id="ToMachineName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Machine" data-trackchange="true">
                                            @foreach (var item in machines)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code" data-location="@item.LocationId"
                                                        @(item.IsDefault || (!hasWDefault && item.Id == firstWItemId) ? "selected" : "")>
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="ToMachineId" data-clear="false" />
                                    </div>
                                </div>

                                <div id="ReturnStockPropDiv" class="form-group hide">
                                    <label class="col-md-2 control-label" for="prefix">From Machine</label>
                                    <div class="col-md-1">
                                        <select id="FromMachineName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Machine" data-trackchange="true">
                                            @foreach (var item in machines)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code" data-location="@item.LocationId"
                                                        @(item.IsDefault || (!hasWDefault && item.Id == firstWItemId) ? "selected" : "")>
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="ToMachineId" data-clear="false" />
                                    </div>
                                    <label class="col-md-2 control-label" for="prefix">To Warehouse</label>
                                    <div class="col-md-2">
                                        <select id="ToWarehouseName" class="form-control input-small" data-clear="false" show-clear="false" data-placeholder="Select Machine" data-trackchange="true">
                                            @foreach (var item in Warehouses)
                                            {
                                                <option data-custom="@item.Id" value="@item.Id" data-code="@item.Code" data-location="@item.LocationId">
                                                    @item.Name
                                                </option>
                                            }
                                        </select>
                                        <input type="text" class="hide" id="FromWarehouseId" data-clear="false" />
                                    </div>
                                </div>
                            }
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">SRN.</label>
                                <div class="col-md-1 container-voucher">
                                    <label id="lblVoucherNumber" class="label label-info label-voucher hide"></label>
                                    <input type="text" class="form-control number input-small" id="VoucherNumber" data-required="required" data-plus-as-tab="false" data-validate="true" data-message="Voucher Number is required" data-include-in-item="true">
                                </div>

                                <label class="col-md-2 control-label" for="prefix">Date</label>
                                <div class="col-md-2">
                                    <input id="Date" type="text" class="form-control date-picker input-small" data-clear-type='date' data-validate="true" data-required="required" data-message="Date is required" data-hide-dropdown="true" data-fiscal-date="true">
                                </div>

                            </div>

                            <div class="form-group">
                                <label class="col-md-2 control-label master-account-label" for="prefix">Description</label>
                                <div class="col-md-5">
                                    <input type="text" class="form-control" id="Description">
                                </div>

                            </div>
                            <div class="col-md-2"></div>
                            <div class="form-group" data-save="false">

                                <div class="col-md-6 saleitem-container">

                                    <table id="item-container" class="table table-bordered griditem">
                                        <thead>
                                            <tr>
                                                <th style="width: 15%;">Code</th>
                                                <th style="width: 35%;">Items</th>
                                                <th style="width: 20%;">ArticleNo</th>
                                                <th style="width: 11%;">Avail. Qty</th>
                                                <th style="width: 15%;" colspan="2" style="text-align: center">Unit</th>

                                                @*<th>Quantity</th>*@

                                                <th class="hide">Rate</th>
                                                <th class="hide">Amount</th>
                                                <th style="width: 5%;"></th>
                                            </tr>
                                        </thead>
                                        <tbody data-plus-as-tab="false">
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                            @*<div class="col-md-4"></div> *@
                            <div class="form-group">

                                <label class="control-label col-md-2">Special Instructions</label>
                                <div class="col-md-5">
                                    <textarea id="Instructions" class="form-control" data-plus-as-tab="false" style="height: 80px;"></textarea>
                                </div>
                                <label class="control-label col-md-3">Qty Total</label>
                                <div class="col-md-2">
                                    <input id="QuantityTotal" class="form-control align-right" type="text" disabled="disabled" readonly="readonly" data-required="required" data-message="Please add atleast one item" />
                                </div>

                            </div>
                            <div class="form-actions">
                                <div class="btn-set pull-left">

                                    @*<button class="btn tooltips" data-container="body" data-placement="top" data-original-title="Tooltip in top">Top</button>*@
                                    <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('first')" class="btn blue tooltips disabled first" data-original-title="First">
                                        <i class="fa fa-angle-double-left"></i>
                                    </a>
                                    <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('previous')" class="btn blue tooltips disabled previous" data-original-title="Previous">
                                        <i class="fa fa-angle-left"></i>
                                    </a>
                                    <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('next')" class="btn blue tooltips disabled next" data-original-title="Next">
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                    <a href="javascript:;" onclick="InternalStockTransfer.LoadVoucher('last')" class="btn blue tooltips disabled last" data-original-title="Last">
                                        <i class="fa fa-angle-double-right"></i>
                                    </a>
                                </div>
                                <div class="btn-set pull-right">
                                    @if (!SiteContext.Current.Fiscal.IsClosed)
                                    {
                                        <button type="button" class="btn purple-plum" onclick="InternalStockTransfer.New()">
                                            <i class="fa  fa-plus-circle"></i>
                                            New
                                        </button>
                                        <button id="saveBtn" type="button" class="btn btn-primary green" onclick="InternalStockTransfer.Save()">
                                            <i class="fa fa-check"></i>
                                            Save
                                        </button>
                                        <button type="button" id="btndelete" class="btn red" onclick="InternalStockTransfer.Delete()">
                                            <i class="fa fa-trash-o"></i>
                                            Delete
                                        </button>
                                    }
                                    <button type="button" id="btnprint" class="btn yellow" onclick="InternalStockTransfer.Print()">
                                        <i class="fa fa-print"></i>

                                        Print
                                    </button>
                                    <button type="button" class="btn blue" onclick="window.location='@(Url.Content(SettingManager.DashBoardUrl))'">
                                        <i class="fa  fa-times-circle"></i>

                                        Close
                                    </button>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
                <!-- END EXAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
    <div class="hide" id="div-table">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list"></i>Record Listing
                    </div>
                    <div class="actions">
                        <a href="javascript:;" onclick="InternalStockTransfer.Add()" class="btn blue">
                            <i class="fa fa-plus"></i>&nbsp;New
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="hide alert alert-danger container-message">
                        <i class="close" onclick="$(this).parent().hide();"></i>
                        <strong></strong>
                        <div class="form-body message-content"></div>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="mainTable">
                        <thead>
                            <tr>
                                <th style="width: 8px;" class="no-sort">
                                    <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                                </th>
                                <th>
                                    Vou #
                                </th>
                                <th>Book #</th>
                                <th>Party</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Remarks</th>
                                <th style="width: 75px;" class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="8">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>
    </div>
    <div id="jsondata" class="hide">
        <p id="data">@ViewBag.FormSetting</p>
    </div>
}
