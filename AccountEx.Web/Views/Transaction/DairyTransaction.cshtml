@{
    ViewBag.Title = "Dairy Adjustment";
}
@using AccountEx.BussinessLogic;
@using AccountEx.Common;
@using AccountEx.CodeFirst.Models;
@{
    var error = "";
    if (SettingManager.AdjustmentHeadId == 0)
    {
        error += "<li>Adjustment account is missing.</li>";

    }
    if (SettingManager.SaleAccountHeadId == 0)
    {
        error += "<li>Sale account is missing.</li>";

    }
    if (SiteContext.Current.Fiscal == null)
    {
        error += "<li>No fiscal year found.</li>";

    }
    var showDiscount = "hide";
    var colspan = !string.IsNullOrWhiteSpace(showDiscount) ? "6" : "10";
}
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="note note-danger note-bordered">
        <h4 class="block">Head Account Missing</h4>
        <div>
            <i class="fa-lg fa fa-warning"></i>Head Account is missing in the application settings.In order to complete current transaction head accounts must be added in settings.<br />


            <ul>
                @Html.Raw(error)
            </ul>


            Add missing head accounts in settings and then try again by <a href="@Request.Url"><i class="fa fa-refresh"></i>&nbsp;Relaoding</a>&nbsp;the current page.
        </div>
    </div>
}
else
{
    @section PageTitle
{
        <h1 class="font-green-sharp bold">Dairy Transactions</h1>
    }
    <div id="form-info">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Manage Dairy Transaction
                    </div>
                    <div class="actions hide">
                        <a href="javascript:;" onclick="Transaction.LoadVoucher('previous')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Back
                        </a>
                        <a href="javascript:;" onclick="Transaction.LoadVoucher('next')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Next
                        </a>

                    </div>
                </div>
                <div class="portlet-body form">

                    <div id="mainform" class="form-horizontal" data-save="save">
                        <input type="text" id="Id" class="hide" data-include-in-item="true" data-item-id="SaleId" />
                        <input type="text" id="CreatedDate" class="hide ac-date" data-clear-type="date" />
                        <input type="text" id="IsDeleted" class="hide" />
                        <input type="text" id="PreVoucherNumber" class="hide" />
                        <input type="text" id="Status" class="hide" />
                        <div class="form-body">
                            <div class="hide alert alert-danger container-message">
                                <i class="close" onclick="$(this).parent().hide();"></i>
                                <strong></strong>
                                <div class="form-body message-content"></div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Voucher No.</label>
                                <div class="col-md-1 container-voucher">
                                    <label id="lblVoucherNumber" class="label label-info label-voucher hide"></label>
                                    <input type="text" class="form-control number input-small" id="VoucherNumber" data-required="required" data-plus-as-tab="false" data-validate="true" data-message="Adjustment Number is required">
                                </div>
                                <label class="col-md-1 control-label" for="prefix">Date</label>
                                <div class="col-md-2">
                                    <input id="Date" type="text" class="form-control date-picker" data-clear-type='date' data-required="required" data-message="Date is required" data-hide-dropdown="true" data-fiscal-date="true">
                                </div>
                                <label class="col-md-1 control-label" for="prefix">Shift</label>
                                <div class="col-md-2">
                                    <select id="Shift" class="form-control select2" placeholder="Select Status">
                                        <option value="Morning">Morning</option>
                                        <option value="Evening">Evening</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row" data-save="false">
                                <div class="col-md-2"></div>
                                <div class="col-md-8 saleitem-container scroller12" data-always-visible="1" data-rail-visible1="1">
                                    <div class="portlet">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-list"></i>Item List
                                            </div>
                                        </div>
                                    </div>
                                    <table id="item-container" class="table table-bordered griditem">
                                        <thead>
                                            <tr>
                                                <th>Code</th>
                                                <th style="width: 30%;">Name</th>
                                                <th style="width: 30%;">Comments</th>
                                                <th class="align-right">Milk</th>
                                                <th class="align-right">Rate</th>
                                                <th class="align-right">Amount</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody data-plus-as-tab="false">
                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td colspan="3" class="text-right">Total: </td>
                                                <td>
                                                    <input type="text" id="TotalQty" disabled="disabled" class="form-control input-small align-right" data-db-column="TotalAmount" data-db-type="float">
                                                </td>
                                                <td class="text-right"></td>
                                                <td>
                                                    <input type="text" id="TotalAmount" disabled="disabled" class="form-control input-small align-right" data-db-column="TotalAmount" data-db-type="float">
                                                </td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2"></div>
                                <div class="col-md-8">
                                    <strong>Total Milk:</strong>
                                    <span id="totalMilk" class="btn blue">0</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="btn-set pull-left">

                                @*<button class="btn tooltips" data-container="body" data-placement="top" data-original-title="Tooltip in top">Top</button>*@
                                <a href="javascript:;" onclick="Transaction.LoadVoucher('first')" class="btn blue tooltips disabled first" data-original-title="First">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                                <a href="javascript:;" onclick="Transaction.LoadVoucher('previous')" class="btn blue tooltips disabled previous" data-original-title="Previous">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a href="javascript:;" onclick="Transaction.LoadVoucher('next')" class="btn blue tooltips disabled next" data-original-title="Next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="javascript:;" onclick="Transaction.LoadVoucher('last')" class="btn blue tooltips disabled last" data-original-title="Last">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </div>
                            <div class="btn-set pull-right">
                                @if (!SiteContext.Current.Fiscal.IsClosed)
                                {
                                    <button type="button" class="btn purple-plum" onclick="Transaction.New()">
                                        <i class="fa  fa-plus-circle"></i>
                                        New
                                    </button>
                                    <button type="button" class="btn btn-primary green" onclick="Transaction.Save()">
                                        <i class="fa fa-check"></i>
                                        Save
                                    </button>
                                    <button type="button" class="btn red" onclick="Transaction.Delete()">
                                        <i class="fa fa-trash-o"></i>
                                        Delete
                                    </button>
                                }
                                <button type="button" class="btn yellow" onclick="Transaction.Print()">
                                    <i class="fa fa-print"></i>

                                    Print
                                </button>
                                <button type="button" class="btn blue" onclick="window.location='@(Url.Content(SettingManager.DashBoardUrl))'">
                                    <i class="fa  fa-times-circle"></i>

                                    Close
                                </button>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>

    </div>
    <div class="hide" id="div-table">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list"></i>Record Listing
                    </div>
                    <div class="actions">
                        <a href="javascript:;" onclick="Transaction.Add()" class="btn blue">
                            <i class="fa fa-plus"></i>&nbsp;New
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="hide alert alert-danger container-message">
                        <i class="close" onclick="$(this).parent().hide();"></i>
                        <strong></strong>
                        <div class="form-body message-content"></div>
                    </div>

                    <table class="table table-striped table-bordered table-hover" id="mainTable">
                        <thead>
                            <tr>
                                <th style="width: 8px;" class="no-sort">
                                    <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                                </th>
                                <th>
                                    Vou #
                                </th>
                                <th>Book #</th>
                                <th>Party</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Remarks</th>
                                <th style="width: 75px;" class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="8">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>

    </div>
    <div id="jsondata" class="hide">
        <p id="data">@ViewBag.FormSetting</p>
    </div>
}
<script type="text/html" id="template-item">
    <tr>

        <td>
            <input type="hidden" class="Id" data-db-column="Id">
            <input type="hidden" class="ItemId" id="ItemId" data-db-column="ItemId">
            <input type="hidden" class="EntryType" id="EntryType" data-db-column="EntryType" value="@((int)EntryType.Item)"><input type="hidden">
            <input type="text" class="Code form-control typeahead input-small ui-autocomplete-input" data-db-column="ItemCode" autocomplete="off">
        </td>
        <td>
            <input type="text" disabled="disabled" class="Name form-control input-medium" data-db-column="ItemName">
        </td>
        <td>
            <input type="text" class="Comment form-control input-medium" data-db-column="Comment">
        </td>
        <td class="align-center">
            <input type="text" class="Qty form-control input-small num align-right" data-db-column="Qty" data-db-type="float">
        </td>
        <td class="align-center">
            <input type="text" class="Rate form-control input-small num align-right" data-db-column="Rate" data-db-type="float">
        </td>
        <td class="align-center">
            <input type="text" disabled="disabled" class="Amount form-control input-small num align-right" data-db-column="Amount" data-db-type="float">
        </td>
        <td style="width: 8px;">
            <span class="action"><i class="fa fa-trash-o" onclick="Transaction.DeleteRow(this)" data-original-title="Delete Item"></i></span>

        </td>
    </tr>
</script>
<style>
    .twitter-typeahead {
        /*width: 500%;*/
    }
</style>
@section FooterScript
{
    <script src="~/Content/AutoComplete/jquery-ui.js"></script>
    <link href="~/Content/AutoComplete/jquery-ui.css" rel="stylesheet" />
    @* <script src="../../Content/HotKey/jquery.hotkeys.js"></script>*@
    <script src="~/Content/AppJS/Transaction/DairyTransaction.js"></script>
    <script>
        jQuery(document).ready(function () {
            Transaction.init();
        });
    </script>
}

