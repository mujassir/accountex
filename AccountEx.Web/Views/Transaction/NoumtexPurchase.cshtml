    //ViewBag.FormTitle = "Add/Edit Commercial Sales";
    var type = Request.QueryString["type"] + "";
    var vouchertype = ((VoucherType)Enum.Parse(typeof(VoucherType), type, true));
    var allowDc = (vouchertype == VoucherType.GstPurchase || vouchertype == VoucherType.Purchase) && SettingManager.AllowDC;
    var colmd = (vouchertype == VoucherType.GstPurchase || vouchertype == VoucherType.GstPurchaseReturn) ? 10 : 6;
    switch (type.ToLower())
    {
        case "sale":
        case "sales":
            ViewBag.FormTitle = "Sale";
            break;
        case "purchase":
        case "purchases":
            ViewBag.FormTitle = "Commercial Purchase";
            break;
        case "gstpurchase":
        case "gstpurchases":
            ViewBag.FormTitle = "GST Purchase";
            break;
        case "salereturn":
            ViewBag.FormTitle = "Sale Return";
            break;
        case "purchasereturn":
            ViewBag.FormTitle = "Commercial Purchase Return";
            break;
        case "gstpurchasereturn":
            ViewBag.FormTitle = "GST Purchase Return";
            break;

    }
    ViewBag.Title = ViewBag.FormTitle;
}
@section PageTitle
