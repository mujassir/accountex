    <h1 class="font-green-sharp bold hidden-print">Manage @ViewBag.FormTitle</h1>
}
@using AccountEx.BussinessLogic;


@{
    type = Request["type"].ToLower();
    var allowPartner = false;
    if (vouchertype == VoucherType.Purchase && SettingManager.IsCommercialPurchaseAllowPartner)
    {
        allowPartner = true;
    }
    else if (vouchertype == VoucherType.PurchaseReturn && SettingManager.IsCommercialPurchaseReturnAllowPartner)
    {
        allowPartner = true;
    }
    else if (vouchertype == VoucherType.GstPurchase && SettingManager.IsGSTPurchaseAllowPartner)
    {
        allowPartner = true;
    }
    else if (vouchertype == VoucherType.GstPurchaseReturn && SettingManager.IsGSTPurchaseReturnAllowPartner)
    {
        allowPartner = true;
    }
    var error = "";
    switch (type)
    {
        case "sale":
            if (SettingManager.SaleAccountHeadId == 0)
            {
                error += "<li>Sale account is missing.</li>";

            }
            if (SettingManager.CustomerHeadId == 0 && SettingManager.CashAccountId == 0)
            {
                error += "<li>Customer or cash account is missing.</li>";

            }
            break;
        case "purchase":
            if (SettingManager.PurchaseAccountHeadId == 0)
            {
                error += "<li>Purchase account is missing.</li>";

            }
            if (SettingManager.SupplierHeadId == 0)
            {
                error += "<li>Supplier account is missing.</li>";

            }
            break;
        case "gstpurchase":
            if (SettingManager.GstPurchaseAccountHeadId == 0)
            {
                error += "<li>GST Purchase account is missing.</li>";

            }
            if (SettingManager.SupplierHeadId == 0)
            {
                error += "<li>Supplier account is missing.</li>";

            }
            break;
        case "salereturn":
            if (SettingManager.SaleReturnAccountHeadId == 0)
            {
                error += "<li>Sale return account is missing.</li>";

            }
            if (SettingManager.CustomerHeadId == 0 && SettingManager.CashAccountId == 0)
            {
                error += "<li>Customer or cash account is missing.</li>";

            }
            break;
        case "purchasereturn":
            if (SettingManager.PurchaseReturnAccountHeadId == 0)
            {
                error += "<li>Purchase return account is missing.</li>";

            }
            if (SettingManager.SupplierHeadId == 0)
            {
                error += "<li>Supplier account is missing.</li>";

            }
            break;
        case "gstpurchasereturn":
            if (SettingManager.GstPurchaseReturnAccountHeadId == 0)
            {
                error += "<li>GST Purchase return account is missing.</li>";

            }
            if (SettingManager.SupplierHeadId == 0)
            {
                error += "<li>Supplier account is missing.</li>";

            }
            break;
    }
    if (SettingManager.ProductHeadId == 0)
    {
        error += "<li>Product Account is Missing.</li>";

    }
    if (SiteContext.Current.Fiscal == null)
    {
        error += "<li>No fiscal year found.</li>";

    }

}
