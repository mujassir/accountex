@{
    ViewBag.Title = "Dairy Adjustment";
}
@using AccountEx.BussinessLogic;
@using AccountEx.Common;
@using AccountEx.CodeFirst.Models;
@{
    var error = "";
    if (SettingManager.AdjustmentHeadId == 0)
    {
        error += "<li>Adjustment account is missing.</li>";

    }
    if (SettingManager.SaleAccountHeadId == 0)
    {
        error += "<li>Sale account is missing.</li>";

    }
    if (SiteContext.Current.Fiscal == null)
    {
        error += "<li>No fiscal year found.</li>";

    }
    var showDiscount = "hide";
    var colspan = !string.IsNullOrWhiteSpace(showDiscount) ? "6" : "10";
}
<style>
    .nowrap {
        white-space: nowrap;
    }
</style>
@if (!string.IsNullOrWhiteSpace(error))
{
    <div class="note note-danger note-bordered">
        <h4 class="block">Head Account Missing</h4>
        <div>
            <i class="fa-lg fa fa-warning"></i>Head Account is missing in the application settings.In order to complete current transaction head accounts must be added in settings.<br />


            <ul>
                @Html.Raw(error)
            </ul>


            Add missing head accounts in settings and then try again by <a href="@Request.Url"><i class="fa fa-refresh"></i>&nbsp;Relaoding</a>&nbsp;the current page.
        </div>
    </div>
}
else
{
    @section PageTitle
{
        <h1 class="font-green-sharp bold">Daily Activity</h1>
    }
    <div id="form-info">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-edit"></i>Manage Daily Activity <span class="isNew badge badge-primary">New</span><span class="isUpdate badge badge-warning">Update</span>
                    </div>
                    <div class="actions hide">
                        <a href="javascript:;" onclick="Adjustment.LoadVoucher('previous')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Back
                        </a>
                        <a href="javascript:;" onclick="Adjustment.LoadVoucher('next')" class="btn blue">
                            <i class="fa fa-angle-left"></i>&nbsp;Next
                        </a>

                    </div>
                </div>
                <div class="portlet-body form">

                    <div id="mainform" class="form-horizontal" data-save="save">
                        <input type="text" id="Id" class="hide" data-include-in-item="true" data-item-id="SaleId" />
                        <input type="text" id="CreatedDate" class="hide ac-date" data-clear-type="date" />
                        <input type="text" id="IsDeleted" class="hide" />
                        <input type="text" id="PreVoucherNumber" class="hide" />
                        <input type="text" id="Status" class="hide" />
                        <div class="form-body">
                            <div class="hide alert alert-danger container-message">
                                <i class="close" onclick="$(this).parent().hide();"></i>
                                <strong></strong>
                                <div class="form-body message-content"></div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Voucher No.</label>
                                <div class="col-md-1 container-voucher">
                                    <label id="lblVoucherNumber" class="label label-info label-voucher hide"></label>
                                    <input type="text" class="form-control number input-small" id="VoucherNumber" data-required="required" data-plus-as-tab="false" data-validate="true" data-message="Adjustment Number is required">
                                </div>
                                <label class="col-md-1 control-label" for="prefix">Date</label>
                                <div class="col-md-1">
                                    <input id="Date" type="text" class="form-control date-picker" data-clear-type='date' data-required="required" data-message="Date is required" data-hide-dropdown="true" data-fiscal-date="true">
                                </div>
                                <label class="col-md-1 control-label" for="prefix">Status</label>
                                <div class="col-md-2">
                                    <select id="ItemStatus" class="form-control select2" placeholder="Select Status">
                                        <option value="Milker" selected>Milker</option>
                                        <option value="Non-Milker">Non-Milker</option>
                                        <option value="Pregnant">Pregnant</option>
                                        <option value="Meat">Meat</option>
                                        <option value="Kid">Kid</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Group</label>
                                <div class="col-md-3">
                                    <select id="GroupId" class="form-control select2" placeholder="Select group">
                                        <option></option>
                                        @foreach (var p in (List<IdName>)ViewBag.ProductGroups)
                                        {
                                            <option data-custom="@p.Name" value="@p.Id">@p.Name</option>
                                        }
                                    </select>
                                    <input type="hidden" value="GroupId" />
                                    <input id="GroupName" type="hidden" value="GroupName" />
                                </div>
                                <label class="col-md-1 control-label" for="prefix">Shift</label>
                                <div class="col-md-2">
                                    <select id="Shift" class="form-control select2" placeholder="Select Status">
                                        <option value="Morning">Morning</option>
                                        <option value="Noon">Noon</option>
                                        <option value="Evening">Evening</option>
                                    </select>
                                </div>
                            </div>

                            <div class="row" data-save="false">
                                <div class="col-md-2"></div>
                                <div class="col-md-8 saleitem-container scroller12" data-always-visible="1" data-rail-visible1="1">
                                    <div class="portlet">
                                        <div class="portlet-title">
                                            <div class="caption">
                                                <i class="fa fa-list"></i>Item List
                                            </div>
                                        </div>
                                    </div>
                                    <table id="item-container" class="table table-bordered griditem">
                                        <thead>
                                            <tr>
                                                <th style="min-width: 80px">Code</th>
                                                <th style="width: 30%;">Name</th>
                                                <th style="width: 30%;">Comments</th>
                                                <th id="Item-@(SettingManager.VDailyActivityDebitItem1Id)" 
                                                    class="DebitItemCol nowrap align-center @(SettingManager.VDailyActivityDebitItem1Id == 0 ? "hide" : "")">
                                                    DItem 1
                                                </th>
                                                <th id="Item-@(SettingManager.VDailyActivityDebitItem2Id)" 
                                                    class="DebitItemCol nowrap align-center @(SettingManager.VDailyActivityDebitItem2Id == 0 ? "hide" : "")">
                                                    DItem 2
                                                </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem1Id)"
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem1Id == 0 ? "hide" : "")">
                                                    CItem 1
                                                </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem2Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem2Id == 0 ? "hide" : "")">
                                                    CItem 2
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem3Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem3Id == 0 ? "hide" : "")">
                                                    CItem 3
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem4Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem4Id == 0 ? "hide" : "")">
                                                    CItem 4
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem5Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem5Id == 0 ? "hide" : "")">
                                                    CItem 5
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem6Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem6Id == 0 ? "hide" : "")">
                                                    CItem 6
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem7Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem7Id == 0 ? "hide" : "")">
                                                    CItem 7
                                                    </th>
                                                <th id="Item-@(SettingManager.VDailyActivityCreditItem8Id)" 
                                                    class="align-center nowrap @(SettingManager.VDailyActivityCreditItem8Id == 0 ? "hide" : "")">
                                                    CItem 8
                                                    </th>
                                                <th></th>
                                            </tr>
                                            <tr>
                                                <td class="align-right" colspan="3"></td>
                                                <td class="DebitItemCol align-center @(SettingManager.VDailyActivityDebitItem1Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalDebitItem1" class="form-control align-center">
                                                </td>
                                                <td class="DebitItemCol align-center @(SettingManager.VDailyActivityDebitItem2Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalDebitItem2" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem1Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem1" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem2Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem2" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem3Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem3" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem4Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem4" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem5Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem5" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem6Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem6" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem7Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem7" class="form-control align-center">
                                                </td>
                                                <td class="align-center @(SettingManager.VDailyActivityCreditItem8Id == 0 ? "hide" : "")">
                                                    <input type="text" id="TotalCreditItem8" class="form-control align-center">
                                                </td>
                                                <td></td>
                                            </tr>
                                        </thead>
                                        <tbody data-plus-as-tab="false">
                                        </tbody>
                                    </table>
                                </div>


                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="btn-set pull-left">

                                @*<button class="btn tooltips" data-container="body" data-placement="top" data-original-title="Tooltip in top">Top</button>*@
                                <a href="javascript:;" onclick="Adjustment.LoadVoucher('first')" class="btn blue tooltips disabled first" data-original-title="First">
                                    <i class="fa fa-angle-double-left"></i>
                                </a>
                                <a href="javascript:;" onclick="Adjustment.LoadVoucher('previous')" class="btn blue tooltips disabled previous" data-original-title="Previous">
                                    <i class="fa fa-angle-left"></i>
                                </a>
                                <a href="javascript:;" onclick="Adjustment.LoadVoucher('next')" class="btn blue tooltips disabled next" data-original-title="Next">
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="javascript:;" onclick="Adjustment.LoadVoucher('last')" class="btn blue tooltips disabled last" data-original-title="Last">
                                    <i class="fa fa-angle-double-right"></i>
                                </a>
                            </div>
                            <div class="btn-set pull-right">
                                @if (!SiteContext.Current.Fiscal.IsClosed)
                                {
                                    <button type="button" class="btn purple-plum" onclick="Adjustment.New()">
                                        <i class="fa  fa-plus-circle"></i>
                                        New
                                    </button>
                                    <button type="button" class="btn btn-primary green" onclick="Adjustment.Save()">
                                        <i class="fa fa-check"></i>
                                        Save
                                    </button>
                                    <button type="button" class="btn red" onclick="Adjustment.Delete()">
                                        <i class="fa fa-trash-o"></i>
                                        Delete
                                    </button>
                                }
                                <button type="button" class="btn yellow" onclick="Adjustment.Print()">
                                    <i class="fa fa-print"></i>

                                    Print
                                </button>
                                <button type="button" class="btn blue" onclick="window.location='@(Url.Content(SettingManager.DashBoardUrl))'">
                                    <i class="fa  fa-times-circle"></i>

                                    Close
                                </button>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>

    </div>
    <div class="hide" id="div-table">
        <div class="col-md-12 col-sm-12">
            <!-- BEGIN EXAMPLE TABLE PORTLET-->
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list"></i>Record Listing
                    </div>
                    <div class="actions">
                        <a href="javascript:;" onclick="Adjustment.Add()" class="btn blue">
                            <i class="fa fa-plus"></i>&nbsp;New
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="hide alert alert-danger container-message">
                        <i class="close" onclick="$(this).parent().hide();"></i>
                        <strong></strong>
                        <div class="form-body message-content"></div>
                    </div>

                    <table class="table table-striped table-bordered table-hover" id="mainTable">
                        <thead>
                            <tr>
                                <th style="width: 8px;" class="no-sort">
                                    <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                                </th>
                                <th>
                                    Vou #
                                </th>
                                <th>Book #</th>
                                <th>Party</th>
                                <th>Total</th>
                                <th>Date</th>
                                <th>Remarks</th>
                                <th style="width: 75px;" class="no-sort"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="8">Loading...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
        </div>

    </div>
    <div id="jsondata" class="hide">
        <p id="data">@ViewBag.FormSetting</p>
    </div>
}
<script type="text/html" id="template-item">
    <tr>

        <td>
            <input type="hidden" class="Id" data-db-column="Id">
            <input type="hidden" class="ItemId" id="ItemId" data-db-column="ItemId">
            <input type="hidden" class="EntryType" id="EntryType" data-db-column="EntryType" value="@((int)EntryType.Item)"><input type="hidden">
            <input type="text" class="Code form-control typeahead input-small ui-autocomplete-input" data-db-column="ItemCode" autocomplete="off">
        </td>
        <td>
            <input type="text" disabled="disabled" class="Name form-control input-medium" data-db-column="ItemName">
        </td>
        <td>
            <input type="text" class="Comment form-control input-medium" data-db-column="Comment">
        </td>
        <td class="DebitItemCol align-center @(SettingManager.VDailyActivityDebitItem1Id == 0 ? "hide" : "")">
            <input type="hidden" class="DebitItem1Code" value="@SettingManager.VDailyActivityDebitItem1Id" data-db-column="DebitItem1Code" data-db-type="float">
