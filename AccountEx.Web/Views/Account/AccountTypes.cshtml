            <a href="#">Dashboard</a>
        </li>
    </ul>

</div>
<!-- END PAGE HEADER-->
<div id="divMessage" class="alert alert-success alert-dismissable" style="display: none;">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"></button>
    <strong>Successs!</strong> Changes saved successfully
</div>

<div class="row hide" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box purple">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit Detail
                </div>
                <div class="actions">
                    <a href="javascript:;" onclick="AccountTypes.ListView()" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back to list 
                    </a>
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Name</label>
                            <div class="col-md-3">
                                <label id="lblVoucherNumber" class="label label-info"></label>
                                <input type="text" class="form-control " id="Name" placeholder="Name" data-required="required" data-validate="true" data-message="Name is required" >
                            </div>
                        </div>
                       <div class="form-group row-Account">
                            <label class="col-md-2 control-label" for="prefix">Account</label>
                            <div class="col-md-6">
                                <select id="AccountId" class="form-control"  data-trackchange='true' data-required="required" data-message="Select Customer" data-placeholder="Select Customer">
                                    @*<option></option>*@
                                    @foreach (var cat in ViewBag.Accounts as List<IdName>)
                                    {
                                        <option data-custom="@cat.Id" value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                                @* <input type="hidden" id="SubCategoryId" value="0" />*@
                            </div>
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary" onclick="AccountTypes.Save()">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="AccountTypes.ListView()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

