@using AccountEx.Common
@{
    ViewBag.Title = "Chart Of Accounts";
}

@section PageTitle
{

    <h1 class="font-green-sharp bold">Chart of Account </h1>
}

<div class="row hidden-print" id="form-info">

    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption ">
                    <i class="fa fa-edit"></i><span class="voucher-title">Add/Edit Detail </span>
                </div>
                <div class="actions hide">
                    <a href="javascript:;" onclick="VoucherTrans.LoadVoucher('previous')" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Back
                    </a>
                    <a href="javascript:;" onclick="VoucherTrans.LoadVoucher('next')" class="btn blue">
                        <i class="fa fa-angle-left"></i>&nbsp;Next 
                    </a>

                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Code</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control " id="AccountCode" data-plus-as-tab="false" data-required="required" data-message="Account Code is required" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Name</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control " id="Name" data-required="required" data-message="Name is required" />
                            </div>
                        </div>

                    </div>
                    <div class="row" data-save="false">
                        <div class="col-md-8">
                            <table class="table table-striped table-bordered table-hover" id="mainTable">
                                <thead>
                                    <tr>

                                        <th>Code</th>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="4">Loading...</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="form-actions">
                                <label class="col-md-2 control-label">&nbsp;</label>

                                <div class="col-md-8">
                                    <button type="button" class="btn btn-primary" onclick="COA.Save()">Save</button>
                                    <button id="btnCancel" type="button" class="btn btn-default hide" onclick="Assets.ListView()">Cancel</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div id="account-type" class="radio-list well">

                                <input id="ParentId" type="hidden" />
                                @foreach (var account in (List<IdName>)ViewBag.HeadAccounts)
                                {
                                    <label>
                                        <span>
                                            <input type="radio"  value="@account.Id" name="ac">
                                        </span>
                                        @account.Name
                                    </label>
                                }
                            </div>

                        </div>
                    </div>



                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>





@section FooterScript
{<script src="~/Content/AppJS/Account/COA.js"></script>

    <script>
        jQuery(document).ready(function () {
            COA.init();
        });
    </script>
}
