@{
    ViewBag.Title = "Change Password";   
}

<style>
    #tblmenu tr.parent td {
        background-color: #EFEFEF;
    }
</style>
@section PageTitle
{

    <h1 class="font-green-sharp bold">Change Password</h1>
}


<!-- END PAGE HEADER-->


<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption ">
                    Old/New Password
                </div>

            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="hide alert alert-danger container-message">
                            <i class="close" onclick="$(this).parent().hide();"></i>
                            <strong></strong>
                            <div class="form-body message-content"></div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Old Password</label>
                            <div class="col-md-3">
                                <input type="password" class="form-control " id="OldPassword" data-required="required" data-validate="true" data-message="Old Password is required" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">New Password</label>
                            <div class="col-md-3">
                                <input type="password" class="form-control " id="NewPassword" data-required="required" data-validate="true" data-message="New Password is required" >
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Confirm Password</label>
                            <div class="col-md-3">
                                <input type="password" class="form-control " id="ConfirmPassword" data-required="required" data-validate="true" data-message="Confirm Password is required" >
                            </div>

                        </div>


                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary" onclick="ChangePassword.Save()">Save</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>



@section FooterScript
{
    <script src="../Content/AppJS/Account/ChangePassword.js"></script>
    <script>
        jQuery(document).ready(function () {
            ChangePassword.init();
        });
    </script>
}
