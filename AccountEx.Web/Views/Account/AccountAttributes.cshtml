@{
    ViewBag.Title = "Account Attribute";   
}

<h3 class="page-title">Manage Account Attributes
</h3>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="index.html">Home</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li>
            <a href="#">Dashboard</a>
        </li>
    </ul>
</div>
<!-- END PAGE HEADER-->




<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>Record Listing
                </div>
                <div class="actions">
                    <button id="btnEdit" type="button" class="btn blue hide" onclick="AccountAttributes.Add()"><i class="fa fa-plus"></i>&nbsp;New</button>
                    <button id="btnSave" type="button" class="btn blue hide" onclick="AccountAttributes.Save()"><i class="fa fa-check"></i>&nbsp;Save Changes</button>
                </div>
            </div>
            <div class="portlet-body">
                <div id="form-info" class="form-horizontal">
                    <div class="form-body" data-save="save">
                        <input type="hidden" id="Id" />
                            <div class="hide alert alert-danger container-message">
                                <i class="close" onclick="$(this).parent().hide();"></i>
                                <strong></strong>
                                <div class="form-body message-content"></div>
                            </div>
                            
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Account Type</label>
                                <div class="col-md-6">
                                    <select id="AccountTypeId" class="select2 form-control">
                                        @foreach (var item in ViewBag.AccountTypes as List<AccountEx.Entities.AccountType>)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Label</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control " id="Label" placeholder="Label" data-required="required" data-validate="true" data-message="Label is required" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Name</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control " id="Name" placeholder="Name" data-required="required" data-validate="true" data-message="Name is required" >
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Attribute Type</label>
                                <div class="col-md-3">
                                    <select id="TypeId" class="select2 form-control">
                                        @foreach (var item in ViewBag.AttributeTypes as List<AccountEx.Common.IdName>)
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-2 control-label" for="prefix">Sequence Number</label>
                                <div class="col-md-3">
                                    <input type="text" class="form-control number" id="SequenceNumber" value="" data-required="required" data-validate="true" data-message="Sequence Number is required" >
                                </div>
                            </div>
                            <div class="form-actions">
                                <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                                <div class="col-md-8">
                                    <button type="button" class="btn btn-primary" onclick="AccountAttributes.Save()">Save</button>
                                    <button id="btnCancel" type="button" class="btn btn-default" onclick="AccountAttributes.ListView()">Cancel</button>
                                </div>
                            </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>
                            <th style="width: 8px;" class="no-sort">
                                <input type="checkbox" class="group-checkable" data-set="#mainTable .checkboxes" />
                            </th>
                            <th>Name</th>
                            <th>Label</th>
                            <th>Type</th>
                            <th>Sequence #</th>
                            <th style="width: 75px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="6">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>

</div>


@section FooterScript
{
    <script src="../../Content/AppJS/Account/AccountAttributes.js"></script>
    <script>
        jQuery(document).ready(function () {
            AccountAttributes.init();
        });
    </script>
}
