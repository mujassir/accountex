@using AccountEx.Common;
@section PageTitle
{
    <h1 class="font-green-sharp bold">Manage PDC</h1>
}
@{
    ViewBag.Title = "PDC";
}

<div class="row hidden-print" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Edit PDC
                </div>
            </div>
            <div class="portlet-body form">
                <div id="mainform" class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" value="0" />
                    <div class="form-body">

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Voucher No</label>
                            <div class="col-md-1">
                                <input id="VoucherNumber" type="text" class="form-control" data-required="required" data-message="Voucher No is required">
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Chq-Date</label>
                            <div class="col-md-2">
                                <input id="ChequeDate" type="text" class="form-control date-picker input-small" data-clear-type='date' data-required="required" data-message="Date is required" data-hide-dropdown="true" data-plus-as-tab="false" data-include-in-item="true" data-fiscal-date="true" />
                            </div>

                            <label class="col-md-1 control-label" for="prefix">Amount</label>
                            <div class="col-md-2">
                                <input id="Amount" type="text" class="form-control" data-required="required" data-message="Amount No is required">
                            </div>


                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Customer</label>
                            <div class="col-md-7">

                                <select id="VehicleSaleId" class="form-control select2" data-required="required" data-message="Chassis No is required">
                                </select>
                            </div>


                        </div>
                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">Cheque No</label>
                            <div class="col-md-2">
                                <input id="ChequeNo" type="text" class="form-control" data-required="required" data-message="Cheque No is required">
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Bank</label>
                            <div class="col-md-4">
                                <select id="BankId" class="form-control select2 banks">
                                    <option></option>

                                </select>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prefix">Deposite Date</label>
                            <div class="col-md-2">
                                <input id="Date" type="text" class="form-control date-picker" data-clear-type='date' data-hide-dropdown="true" data-plus-as-tab="false" data-include-in-item="true" data-fiscal-date="true" />
                            </div>
                            <label class="col-md-1 control-label" for="prefix">Status</label>
                            <div class="col-md-3">

                                <select id="Status" class="form-control select2">
                                    <option></option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Clear))">Clear</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Dishonour))">Dishonour</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.Hold))">Hold</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.PaidCash))">PaidCash</option>
                                    <option value="@((int)(VehiclePostDatedChequeType.PresentAndWaitingToClear))">Present And Waiting To Clear</option>

                                </select>

                            </div>





                        </div>
                        <div class="form-group">

                            <label class="col-md-2 control-label" for="prefix">Remarks</label>
                            <div class="col-md-7">
                                <input id="Remarks" type="text" class="form-control">
                            </div>

                        </div>

                        <div class="portlet-body form">
                            <div class="form-actions">
                                <label class="col-md-2 control-label" for="prefix">&nbsp;</label>
                                <div class="col-md-8">
                                    @* <button type="button" class="btn red purchase-return hide pull-right" onclick="Vehicles.PurchaseReturnInfo()">
                                        <i class="fa fa-trash-o"></i>
                                        Purchase Return</button>*@
                                    <button type="button" class="btn btn-primary green" onclick="VehiclePostDatedCheque.Save()" data-plus-as-tab="false">Save</button>
                                    <button id="btnCancel" type="button" class="btn btn-default" onclick="VehiclePostDatedCheque.CustomClear()">Cancel</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

        </div>
    </div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->


<div class="row" id="div-table">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-list"></i>PDC Listing
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover" id="mainTable">
                    <thead>
                        <tr>

                            <th>Cheque No </th>
                            <th>Cheque Date </th>
                            <th>Customer </th>
                            <th>Chassis No</th>
                            <th>Reg No</th>
                            <th>Amount </th>
                            <th>Bank  </th>
                            <th>Status </th>
                            <th>Remarks </th>

                            <th style="width: 200px;" class="no-sort"></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="4" class="center">Loading...</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
<div id="jsondata" class="hide">
    <p id="data">@ViewBag.Settings</p>
</div>
@section FooterScript
{
    <script src="~/Content/AppJS/Vehicle/VehiclePostDatedCheque.js"></script>
    <script>
        $(document).ready(function () {
            VehiclePostDatedCheque.init();
        });
    </script>
}
