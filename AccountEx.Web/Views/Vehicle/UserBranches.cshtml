@{
    ViewBag.Title = "Manage Users Branches";   
}

@using BussinessLogic;
@using AccountEx.Common;
@using AccountEx.BussinessLogic;
@section PageTitle
{

    <h1 class="font-green-sharp bold">Manage Users Branches</h1>
}


<div class="row" id="form-info">
    <div class="col-md-12 col-sm-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-edit"></i>Add/Remove User Branches
                </div>
               
            </div>
            <div class="portlet-body form">
                <div class="form-horizontal" data-save="save">
                    <input type="text" id="Id" class="hide" />
                    <div class="form-body">
                        <div class="row">
                            <div class="hide alert alert-danger container-message">
                                <i class="close" onclick="$(this).parent().hide();"></i>
                                <strong></strong>
                                <div class="form-body message-content"></div>
                            </div>
                            <div class="col-md-12">
                               
                             
                                  
                               
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="prefix">User</label>
                                    <div class="col-md-4">
                                        <select id="UserId" class="form-control select2" placeholder="Select User" data-required="required" data-message="User is required" data-clear='true'>
                                            <option></option>
                                            @foreach (var item in (List<AccountEx.Common.IdName>)ViewBag.Users)
                                            {
                                                <option data-custom="@item.Name" value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                        <input type="hidden" id="Role" />
                                    </div>
                                </div>
                                  <div class="form-group">
                                        <label class="col-md-2 control-label" for="prefix">Branch</label>
                                        <div class="col-md-6">
                                            <select class="form-control select2" id="BranchIds" placeholder="Select one or more branches" multiple="multiple" data-required="required" data-message="atleast one branch is required">
                                                <option></option>
                                                @foreach (var item in (List<IdName>)ViewBag.Branches)
                                                {
                                                    <option data-custom="@item.Id" value="@item.Id">@item.Name</option>
                                                }
                                            </select>
                                            @* <input type="hidden" id="CompanyPartnerId" />*@
                                        </div>
                                    </div>
                             
                            </div>
                          
                        </div>
                    </div>
                    <div class="form-actions">
                        <label class="col-md-2 control-label" for="prefix">&nbsp;</label>

                        <div class="col-md-8">
                            <button type="button" class="btn btn-primary" onclick="UserBranches.Save()">Save</button>
                            <button id="btnCancel" type="button" class="btn btn-default" onclick="UserBranches.ListView()">Cancel</button>
                        </div>
                    </div>


                </div>

            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<div id="jsondata" class="hide">
   

</div>

@section FooterScript
{
    <script src="~/Content/AppJS/Vehicle/UserBranches.js"></script>
    <script>
        jQuery(document).ready(function () {
            UserBranches.init();
        });
    </script>
}
